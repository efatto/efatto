<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project.open_view_project_all" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="view_project_contract" model="ir.ui.view">
    <field name="name">project.project.tree.contract</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project"/>
    <field name="arch" type="xml">
        <field name="partner_id" position="after">
            <field name="hours_planned" sum="Hours Planned"/>
            <field name="hours_done" sum="Hours"/>
            <field name="progress_hours" widget="progressbar"/>
        </field>
    </field>
    </record>
</odoo>

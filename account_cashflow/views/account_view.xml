<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_move_line_tree_cash_flow" model="ir.ui.view">
    <field name="name">account.move.line.tree.cashflow</field>
    <field name="model">account.move.line</field>
    <field name="arch" type="xml">
        <tree colors="green:is_cashflow == True;red:state == 'draft';black:state == 'valid'" string="Journal Items" create="false" on_write="on_create_write">
            <field name="journal_short_name" options='{"no_open":True}'/>
            <field name="period_id" options='{"no_open":True}'/>
            <field name="date"/>
            <field name="date_maturity"/>
            <field name="date_cashflow"/>
            <field name="name"/>
            <!--<field name="ref"/>-->
            <field name="statement_id" invisible="1"/>
            <field name="partner_id"
                domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"
                on_change="onchange_partner_id(move_id, partner_id, account_id, debit, credit, date, journal_id)"/>
            <!--<field name="account_id" options='{"no_open":True}' domain="[('journal_id','=',journal_id), ('company_id', '=', company_id)]" on_change="onchange_account_id(account_id, partner_id, context)"/>-->
            <field name="account_short_name"/>
            <field name="account_tax_id" options='{"no_open":True}' invisible="context.get('journal_type', False) not in ['sale','sale_refund','purchase','purchase_refund','general']"/>
            <field name="analytic_account_id" groups="analytic.group_analytic_accounting" domain="[('type','not in',['view','template'])]" invisible="not context.get('analytic_journal_id',False)"/>
            <!--<field name="move_id" required="0"/>-->
            <field name="debit" sum="Total Debit"/>
            <field name="credit" sum="Total Credit"/>
            <field name="amount_residual"/>
            <field name="balance_cashflow"/>
            <field name="reconcile_ref"/>
            <field name="invoice" invisible="1"/>
            <field name="amount_currency" readonly="True" invisible="not context.get('currency',False)"/>
            <field name="currency_id" readonly="True" invisible="not context.get('currency',False)" />
            <field name="state" invisible="1"/>
            <field name="company_id" invisible="1"/>
            <field name="is_cashflow" invisible="1"/>
        </tree>
    </field>
    </record>

    <record id="action_account_move_line_cash_flow" model="ir.actions.act_window">
      <field name="name">Cash Flow</field>
      <field name="res_model">account.move.line</field>
      <field name="view_id" ref="view_move_line_tree_cash_flow"/>
      <field name="view_mode">form,tree</field>
      <field name="domain">['|', ('account_id.type', 'in', ['liquidity',]), '&amp;', '&amp;', ('account_id.type', 'in', ['payable','receivable']), ('reconcile_id', '=', False), ('date_maturity', '!=', False)]</field>
    </record>

    <menuitem
        action="action_account_move_line_cash_flow"
        icon="STOCK_JUSTIFY_FILL"
        id="menu_account_move_line_cashflow"
        parent="account.menu_finance_entries"
        sequence="2"
        groups="account.group_account_user"
        />

  </data>
</openerp>

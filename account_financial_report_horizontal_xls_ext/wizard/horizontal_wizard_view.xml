<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    
    <record id="horizontal_bs_webkit_xls_wizard_view" model="ir.ui.view">
      <field name="name">horizontal.bs.webkit.xls</field>
      <field name="model">account.bs.report</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account_financial_report_horizontal_ext.account_bs_report_view"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="/form/label[contains(@string,'generate a pdf')]" position="replace">
            <label nolabel="1" colspan="4" string="This report allows you to generate a pdf or xls of your trial balance allowing you to quickly check the balance of each of your accounts in a single report"/>
          </xpath>
          <xpath expr="/form/group[@col='4']" position='attributes'>
            <attribute name="col">6</attribute>
          </xpath>
          <button string="Print" position="after">
            <button icon="gtk-execute" name="xls_export" string="Export" type="object" context="{'xls_export':1}" colspan="2"/>
          </button>
        </data>
      </field>
    </record>

    <record id="horizontal_pl_webkit_xls_wizard_view" model="ir.ui.view">
      <field name="name">horizontal.pl.webkit.xls</field>
      <field name="model">account.pl.report</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account_financial_report_horizontal_ext.account_pl_report_view"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="/form/label[contains(@string,'The Profit and Loss report')]" position="replace">
            <label nolabel="1" colspan="4" string="This report allows you to generate a pdf or xls of your trial balance allowing you to quickly check the balance of each of your accounts in a single report"/>
          </xpath>
          <xpath expr="/form/group[@col='4']" position='attributes'>
            <attribute name="col">6</attribute>
          </xpath>
          <button string="Print" position="after">
            <button icon="gtk-execute" name="xls_export" string="Export" type="object" context="{'xls_export':1}" colspan="2"/>
          </button>
        </data>
      </field>
    </record>
    
  </data>
</openerp>

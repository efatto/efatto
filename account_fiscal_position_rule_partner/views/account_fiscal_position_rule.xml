<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_account_fiscal_position_rule_form_amount" model="ir.ui.view">
            <field name="name">account.fiscal.position.rule.form.amount</field>
            <field name="model">account.fiscal.position.rule</field>
            <field name="inherit_id" ref="account_fiscal_position_rule.view_account_fiscal_position_rule_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="partner_id"/>
                </field>
                <field name="description" position="after">
                    <field name="amount_max"/>
                    <field name="amount_total"/>
                    <field name="operation_type"/>
                </field>
            </field>
        </record>
        <record id="view_account_fiscal_position_rule_tree_amount" model="ir.ui.view">
            <field name="name">account.fiscal.position.rule.tree.amount</field>
            <field name="model">account.fiscal.position.rule</field>
            <field name="inherit_id" ref="account_fiscal_position_rule.view_account_fiscal_position_rule_tree"/>
            <field name="arch" type="xml">
                <tree position="replace">
                    <tree string="Fiscal Position Rule">
                        <field name="sequence" widget="handle"/>
                        <field name="company_id"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="operation_type"/>
                        <field name="amount_max"/>
                        <field name="amount_total"/>
                        <!--<field name="from_country"/>-->
                        <!--<field name="from_state"/>-->
                        <!--<field name="to_invoice_country"/>-->
                        <!--<field name="to_invoice_state"/>-->
                        <!--<field name="to_shipping_country"/>-->
                        <!--<field name="to_shipping_state"/>-->
                        <field name="vat_rule"/>
                    </tree>
                </tree>
            </field>
        </record>

        <menuitem name="Lettere d'intento"
                  id="account_fiscal_position_rule.menu_action_account_fiscal_position_rule_form"
                  action="account_fiscal_position_rule.action_account_fiscal_position_rule_form"
                  parent="account.menu_finance_receivables" sequence="15"/>

    </data>
</openerp>

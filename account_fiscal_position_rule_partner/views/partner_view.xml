<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_account_fiscal_position_rule_partner_form" model="ir.ui.view">
            <field name="name">account.fiscal.position.rule.partner.form</field>
            <field name="model">account.fiscal.position.rule</field>
            <field name="arch" type="xml">
                <form string="Fiscal Position Rule for Partner">
                    <group>
                        <group string="Description" colspan="4">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group string="Dates" colspan="4">
                            <field name="number_protocol"/>
                            <field name="date_issue"/>
                            <field name="date_reception"/>
                        </group>
                        <group string="Exemption" colspan="4">
                            <field name="exemption_type"/>
                            <field name="amount_max"/>
                            <field name="exemption_proof"/>
                        </group>
                        <group string="Date limit" colspan="4">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="inactive"/>
                        </group>
                        <group string="VAT type" colspan="4">
                            <field name="fiscal_position_id" options="{'no_create': True}"/>
                            <field name="vat_rule"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Usage" colspan="4">
                              <field name="use_sale"/>
                              <field name="use_invoice"/>
                              <field name="use_purchase"/>
                              <field name="use_picking"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_partner_form_fiscal_position_rule" model="ir.ui.view">
            <field name="name">res.partner.form.fiscal.position.rule.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="bank_ids" position="after">
                    <separator string="Vat Exemption Declarations"/>
                    <field name="account_fiscal_position_rule_ids" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id': active_id, 'form_view_ref': 'account_fiscal_position_rule_partner.view_account_fiscal_position_rule_partner_form'}">
                        <tree string="Vat Exemption Declarations">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="number_protocol"/>
                            <field name="date_issue"/>
                            <field name="date_reception"/>
                            <field name="exemption_type"/>
                            <!--<field name="amount_max"/>-->
                            <!--<field name="exemption_proof"/>-->
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="fiscal_position_id"/>
                            <field name="use_sale"/>
                            <field name="use_invoice"/>
                            <!--<field name="use_purchase"/>-->
                            <!--<field name="use_picking"/>-->
                            <field name="vat_rule"/>
                            <field name="inactive"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

        <record id="invoice_customer_form_fiscal_rule" model="ir.ui.view">
            <field name="name">account.invoice.customer.form.fiscal.rule</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="fiscal_position" position="after">
                    <field name="account_fiscal_position_rule_id"/>
                </field>
            </field>
        </record>
        <record id="invoice_supplier_form_fiscal_rule" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.fiscal.rule</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="fiscal_position" position="after">
                    <field name="account_fiscal_position_rule_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

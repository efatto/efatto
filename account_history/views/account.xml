<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_history_form" model="ir.ui.view">
            <field name="name">account.account.history.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="account_history_ids">
                        <tree name="account_history" nolabel="True" editable="bottom">
                            <field name="name"/>
                            <field name="date_from" widget="date"/>
                            <field name="date_to" widget="date"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>
    </data>
</openerp>
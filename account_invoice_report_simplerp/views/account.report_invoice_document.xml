<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="report_accountinvoice_simplerp_doc">
          <t t-call="account_invoice_report_simplerp.external_layout">
          <div class="page">
            <div class="row">
            <div class="col-xs-12">
              <h4 >
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.type == 'out_refund'">Refund</span>
                <span t-if="o.type == 'in_refund'">Supplier Refund</span>
                <span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
                <span t-field="o.number"/><span t-if="o.date_invoice"> del <span t-field="o.date_invoice"/></span>
              </h4>
            </div>
            
                <div class="col-xs-4">
                    <div t-if="o.name">
                        <strong>Description:</strong>
                        <span t-field="o.name" style="font-size: small;"/>
                    </div>
                    <div  t-if="o.origin">
                        <strong>Source:</strong>
                        <span t-field="o.origin"/>
                    </div>
                    <div  t-if="o.reference">
                        <strong>Reference:</strong>
                        <span t-field="o.reference"/>
                    </div>
                    <div t-if="o.partner_id.property_customer_ref">
                        <strong>Customer Code: </strong>
                        <span t-field="o.partner_id.property_customer_ref"/>
                    </div>
                    <div t-if="o.partner_id.vat">
                        <strong>P.IVA: </strong><span t-field="o.partner_id.vat"/>
                    </div>
                    <div t-if="o.partner_id.fiscalcode">
                        <strong>C.F.: </strong><span t-field="o.partner_id.fiscalcode"/>
                    </div>
                </div>
                
                <div class="col-xs-offset-7">
                    <span t-if="o.partner_id.title"> <p t-field="o.partner_id.title"/></span>
                    <address t-field="o.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                    
                </div>
            </div>
    
            <table class="table table-condensed">
                <thead>
                    <tr >
                        <th style="width: 60%">Description</th>
                        <th style="width: 5%">U.M.</th>
                        <th style="width: 5%">Quantity</th>
                        <th style="width: 10%" class="text-right">Unit Price</th>
                        <th style="width: 5%" class="text-right" groups="sale.group_discount_per_so_line">Discount (%)</th>
                        <th style="width: 5%" class="text-right">IVA</th>
                        <th style="width: 10%" class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td>
                            <span t-if="l.uos_id"><span t-field="l.uos_id"  /></span>
                            <span t-if="not l.uos_id">N. </span>
                        </td>
                        <td><span t-field="l.quantity"/></td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td class="text-right" groups="sale.group_discount_per_so_line">
                            <t t-esc="'{0:d}'.format(int(l.discount))" />%
                        </td>
                        <td class="text-right">
                            <span t-esc="', '.join(map(lambda x: x.description, l.invoice_line_tax_id))"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
            
            <div class="row" t-if="o.tax_line">
                <div class="col-xs-12">
                    <table class="table-condensed invoice_tax">
                        <thead>
                            <tr>
                                <th style="width: 70%" >IVA</th>
                                <th style="width: 10%" class="text-right">Imponibile</th>
                                <th style="width: 10%" class="text-right">Amount</th>
                                <th style="width: 10%; border-bottom: 0px white !important;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.tax_line" t-as="t">
                                <td style="border-bottom: 1px solid black;"><span t-field="t.name"/></td>
                                <td style="border-bottom: 1px solid black;" class="text-right">
                                    <span t-field="t.base"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                                <td style="border-bottom: 1px solid black;" class="text-right">
                                    <span t-field="t.amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                                <td></td>
                            </tr>

                            <tr>
                                <td class="text-right" style="border: 1px solid black;"><strong>Total</strong></td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <strong><span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></strong>
                                </td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <strong><span t-field="o.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></strong>
                                </td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <strong><span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></strong>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                    <p/>

                    <table>
                        <tr>
                            <td><span t-if="o.comment"><strong>Comment: </strong><span t-field="o.comment"/></span></td>
                        </tr>
                        <tr>
                            <td><span t-if="o.payment_term.note"><strong>Payment Term: </strong><span t-field="o.payment_term.note"/></span>
                                <p t-if="o.partner_bank_id"><strong>Banca: </strong>
                                <span t-field="o.partner_bank_id.bank_name"/> 
                                <span t-field="o.partner_bank_id.acc_number"/>
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td><span t-if="o.fiscal_position.note"><strong>Fiscal Position Remark: </strong><span t-field="o.fiscal_position.note"/></span></td>
                        </tr>
                    </table>
                </div>
            </div>
          </div>
          </t>
        </template>
        <template id="report_accountinvoice_simplerp">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'account_invoice_report_simplerp.report_accountinvoice_simplerp_doc')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
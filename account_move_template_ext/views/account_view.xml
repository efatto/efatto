<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_move_form_model" model="ir.ui.view">
        <field name="name">account.move.form.model</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group/field[@name='journal_id']" position="before">
                <field name="template_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_move_tree_model" model="ir.ui.view">
        <field name="name">account.move.tree.model</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="before">
                <field name="template_id" string="Account Move Template"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_filter_model" model="ir.ui.view">
        <field name="name">account.move.select.model</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="template_id"/>
            </field>
            <xpath expr="//search/group[@string='Group By']/filter[@string='Partner']" position="before">
                <filter string="Account Move Template" icon="terp-partner" domain="[]" context="{'group_by':'template_id'}"/>
            </xpath>
        </field>
    </record>
    <record id="view_move_template_line_form_model" model="ir.ui.view">
        <field name="name">account.move.template.line.form</field>
        <field name="model">account.move.template.line</field>
        <field name="inherit_id" ref="account_move_template.view_move_template_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="amount" attrs="{'invisible': [('type', '!=', 'amount')]}" />
            </xpath>
        </field>
    </record>
    <record id="view_move_template_form_model" model="ir.ui.view">
        <field name="name">account.move.template.form</field>
        <field name="model">account.move.template</field>
        <field name="inherit_id" ref="account_move_template.view_move_template_form"/>
        <field name="arch" type="xml">
            <field name="cross_journals" position="after">
                <field name="journal_id"/>
            </field>
        </field>
    </record>
    <record id="view_move_template_tree_model" model="ir.ui.view">
        <field name="name">account.move.template.tree</field>
        <field name="model">account.move.template</field>
        <field name="inherit_id" ref="account_move_template.view_move_template_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="journal_id"/>
            </field>
        </field>
    </record>
  </data>
</openerp>

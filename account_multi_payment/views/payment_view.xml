<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="view_account_statement_multi_pay" model="ir.ui.view">
            <field name="name">account.statement.from.invoice.lines.form.multi.pay</field>
            <field name="model">account.statement.from.invoice.lines</field>
            <field name="arch" type="xml">
                <form string="Import Entries">
                    <group colspan="4" expand="1">
                        <separator string="Payable and Receivables" colspan="4"/>
                        <field height="300" width="700" name="line_ids" colspan="4" nolabel="1"
                               domain="[
                               ('account_id.type','in',['receivable','payable']),
                               ('reconcile_id','=',False),
                               ('state', '=', 'valid'),
                               ('move_id.state', '=', 'posted')]"/>
                    </group>
                    <group colspan="4" col="6">
                        <label string ="" colspan="2"/>
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-execute" string="Ok" name="populate_statement" type="object"/>
                   </group>
               </form>
            </field>
        </record>

        <record id="action_view_account_statement_multi_pay" model="ir.actions.act_window">
            <field name="name">Import Entries</field>
            <field name="res_model">account.statement.from.invoice.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_statement_multi_pay"/>
            <field name="target">new</field>
            <field name="context">{'statement_id': active_id}</field>
        </record>

        <record id="view_bank_statement_form_multi_payment" model="ir.ui.view">
            <field name="name">account.bank.statement.form.multi.payment</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="is_multi_payment"/>
                </field>
                <xpath expr="//button[@name='%(account.action_view_account_statement_from_invoice_lines)d']" position="attributes">
                    <attribute name="attrs">{'invisible':['|', ('state','=','confirm'), ('is_multi_payment', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//div[@name='import_buttons']" position="inside">
                    <button name="%(action_view_account_statement_multi_pay)d"
                            string="Import Invoices" type="action" icon="gtk-execute"
                            attrs="{'invisible':['|', ('state','=','confirm'), ('is_multi_payment', '!=', True)]}"/>
                </xpath>
                <button name="button_dummy" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_multi_payment', '=', True)]}</attribute>
                </button>
                <button name="button_cancel" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_multi_payment', '=', True)]}</attribute>
                </button>
            </field>
        </record>

</data>
</openerp>

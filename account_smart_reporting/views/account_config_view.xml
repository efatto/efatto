<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="account_config_view_accountant_partner">
        <field name="name">account.config.view.service.accountant.partner</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.view_account_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//separator[@string='Chart of Accounts']" position="after">
                <separator string="Accountant Partner Config"/>
                <group >
                    <label for="id" string="Accountant Partner Config"/>
                        <div>
                            <div>
                                <field name="accountant_partner_id"
                                       class="oe_inline"/>
                            </div>
                        </div>
                </group>
            </xpath>
        </field>
    </record>
    

</data>
</openerp>
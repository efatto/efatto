<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">
    
        <!--Email template -->
        <record id="email_template_sales_details" model="email.template">
            <field name="name">Report Sales and Journal by Email</field>
            <field name="email_from">${(object.user_id.email or object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="subject">Report Sales and Journal </field>
            <field name="email_to">${object.user_id.company_id.accountant_partner_id.email}</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="account_smart_reporting.report_account_smart_reporting"/>
            <field name="report_name">Accounting Details</field>
            
            <field name="body_html"><![CDATA[
    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello ${object.user_id.company_id.accountant_partner_id.name},</p>

    <p>You will find attached the accounting report of ${object.user_id.company_id.name}.</p>

    <p>Please find the attachment.</p>
    <p>Thanks</p>

    </div>            
            ]]></field>
        </record>

        <act_window name="Send report invoices and files"
            res_model="mail.compose.message"
            src_model="account.invoice"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
            id="action_send_report_invoices_and_files"
            view_type="form"
            context="{'default_template_id': ref('account_smart_reporting.email_template_sales_details'),
            'default_active_ids': active_ids,}"/>

    </data>
</openerp>               
                
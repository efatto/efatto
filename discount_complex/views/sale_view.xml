<?xml version="1.0"?>

<openerp>
	<data>

    <record model="ir.ui.view" id="sale_discount_order_line_form_complex">
        <field name="name">order.line.form.complex</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form2"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                 <field name="complex_discount"/>
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="sale_discount_form_complex">
        <field name="name">order.form.complex</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="complex_discount"/>
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="sale_discount_order_line_tree_complex">
        <field name="name">order.line.tree.complex</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="price_subtotal" position="before">
                <field name="price_unit"/>
                <field name="complex_discount"/>
            </field>
        </field>
    </record>
    
	</data>
</openerp>

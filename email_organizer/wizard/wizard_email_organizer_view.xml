<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wizard_mail_organizer_form">
            <field name="name">wizard_email_organizer.form</field>
            <field name="model">wizard.email.organizer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Wizard Mail Organizer" version="7.0">
                    <sheet>
                        <h1 class="oe_title">Assign message to another resource</h1>
                        <field name="message_id" invisible="True" />
                        <field name="is_filter_visible" invisible="True" />
                        <field name="email_from" invisible="True" />
                        <group>
                            <field name="model" 
                                widget="polymorphic"
                                polymorphic="res_id"
                                colspan="2" />
                            <field name="res_id"
                                   colspan="2"
                                   widget="many2one"
                                   attrs="{'readonly': [('model', '=', False)]}"
                            />
                            <field name="filter_by"
                                   attrs="{'invisible':[('is_filter_visible', '=', False)]}" />
                            <field name="author_id" attrs="{'invisible': [('author_id', '=', False)]}"/>
                            <field name="partner_id" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                        </group>
                        <h2 class="oe_title" attrs="{'invisible': [('subject', '=', False)]}">
                            <field name="subject" />
                        </h2>
                        <field name="body" />
                    </sheet>
                    <footer>
                        <button name="confirm" string="Assign" type="object"  class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- hr employee new kanban view -->
        <record model="ir.ui.view" id="hr_employee_kanban_view_acespritech">
            <field name="name">hr.employee.kanabn</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image_medium"/>
                    <field name="name"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card">
                                <div style="align-content: center !important;">
                                    <div>
                                        <div align="center">
                                            <div align="center">
                                                <img t-att-src="kanban_image('hr.employee', 'image_medium', record.id.value)" width="80" height="80"/>
                                            </div>
                                            <div align="center">
                                                <field name="name"/>
                                            </div>
                                        </div>
                                        <div class="text-center" style="margin-top:30px;">
                                            <t t-if="record.state.value == 'Absent'">
                                                <button type="object" id="btn-sign-in" name="action_sign_in" class="btn-sign-in">
                                                Entra
                                                </button>
                                            </t>
                                            <t t-if="record.state.value == 'Present'">
                                                <button type="object" name="action_sign_out" class="btn-sign-out">
                                                Esci
                                                </button>
                                            </t>
                                        </div>
                                        <div class="text-center" style="margin-top:10px;">
                                            <a name="print_weekly_hours_report" type="object">
                                                Report Orari Settimanali
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="action_hr_employee_acespritech" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
        </record>

        <record id="action_hr_employee_kanban_view_acepritech" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="hr_employee_kanban_view_acespritech"/>
            <field name="act_window_id" ref="action_hr_employee_acespritech"/>
        </record>

        <menuitem name="Employee Clock In-Out" action="action_hr_employee_acespritech" id="menu_hr_employee_clock_view"
            parent="hr.menu_hr_main"/>

    </data>
</openerp>
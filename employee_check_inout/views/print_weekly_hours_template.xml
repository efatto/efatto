<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="print_weekly_hours_template">
            <t t-call="report.external_layout">
                <t t-call="report.html_container">
                    <t t-foreach="doc_ids" t-as="doc_id">
                        <div class="page">
                            <div class="row">
                                <div style="margin-left:30px;" class="col-xs-10">
                                    <div t-as="f" t-foreach="get_employee_data(data)">
                                        <img t-if="f['image']" t-att-src="'data:image/png;base64,%s' % f['image']" style="max-height: 100px;max-width:100px"/>
                                        <br/><span t-esc="f['name']"/>
                                    </div>
                                </div>
                                <div style="margin-left:30px;" class="col-xs-10">
                                    Dates : <span t-esc="get_date(data['form']['start_date'])"/> - <span t-esc="get_date(data['form']['end_date'])"/>
                                </div>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Check In</th>
                                            <th>Check Out</th>
                                            <th>Total Hours Worked</th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <tr t-foreach="get_attendance_list(data)" t-as="f">
                                            <td>
                                                <t t-if="f['check_in']">
                                                    <span t-esc="f['check_in']"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="f['check_out']">
                                                    <span t-esc="f['check_out']"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="f['total_hours_worked']">
                                                    <span t-esc="f['total_hours_worked']"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="wizard_weekly_hours_form_view" model="ir.ui.view">
            <field name="name">Weekly Hours Wizard</field>
            <field name="model">wizard.weekly.hours</field>
            <field name="arch" type="xml">
                <form string="Weekly Hours Wizard">
                    <group col="4">
	                    <field name="start_date"/>
	                    <field name="end_date"/>
                    </group>
                    <footer>
                       <button name="print_weekly_hours_report" string="Print" type="object" class="oe_highlight"/>
                       or
                       <button string="Cancel" class="oe_link" special="cancel" />
                   </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_weekly_hours" model="ir.actions.act_window">
            <field name="name">Weekly Hours Wizard</field>
            <field name="res_model">wizard.weekly.hours</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
    	<delete id="hr_timesheet.property_rule_timesheet_employee" model="ir.rule"/>

    	<record model="ir.rule" id="hr_timesheet.property_rule_timesheet_employee">
            <field name="name">Employee HR Analytic Timesheet with read permission for all</field>
            <field name="model_id" ref="hr_timesheet.model_hr_analytic_timesheet"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    	<delete id="product.product_comp_rule" model="ir.rule"/>

        <record id="product.product_comp_rule" model="ir.rule">
            <field name="name" >Product multi-company with read permission for all</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="global" eval="True"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force"> ['|',('company_id','=',user.company_id.id),('company_id','=',False)]</field>
        </record>

    	<delete id="account.analytic_journal_comp_rule" model="ir.rule"/>

        <record id="account.analytic_journal_comp_rule" model="ir.rule">
            <field name="name">Analytic journal multi-company with read permission for all</field>
            <field name="model_id" ref="account.model_account_analytic_journal"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>
</openerp>

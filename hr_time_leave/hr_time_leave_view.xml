        </record>

        <record model="ir.actions.act_window.view" id="action_request_approve_time_leave_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="edit_time_leave_new"/>
            <field name="act_window_id" ref="request_approve_time_leave"/>
        </record>

        <menuitem name="Time Leave Requests to Approve" parent="menu_open_ask_time_leave" id="menu_request_approve_time_leave" action="request_approve_time_leave" groups="base.group_hr_user"/>

        <record model="ir.actions.act_window" id="open_allocation_time_leave">
            <field name="name">Allocation Requests</field>
            <field name="res_model">hr.time_leave</field>
            <field name="view_type">form</field>
            <field name="context">{'default_type':'add', 'search_default_my_leaves':1}</field>

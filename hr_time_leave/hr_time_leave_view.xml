<openerp>
    <data>

        <!-- Graph report -->
        <record id="view_evaluation_report_graph" model="ir.ui.view">
                <field name="name">hr.time_leave.graph</field>
                <field name="model">hr.time_leave</field>
                <field name="arch" type="xml">
                <graph string="Appraisal Analysis" type="pivot" stacked="True">
                    <field name="employee_id" type="row"/>
                    <field name="time_leave_status_id" type="row"/>
                    <field name="time_from" type="col"/>
                    <field name="number_of_hours" type="measure"/>
                 </graph>
             </field>
        </record>

        <record id="view_hr_time_leave_filter" model="ir.ui.view">
            <field name="name">hr.time_leave.filter</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <search string="Search Leave">
                    <field name="name"/>
                    <separator/>
                    <filter domain="[('state','=','draft')]" string="To Confirm"/>
                    <filter domain="[('state','in',('confirm','validate1'))]" string="To Approve" name="approve"/>
                    <filter domain="[('state','=','validate')]" string="Validated" name="validated"/>
                    <separator/>
                    <filter name="year" string="Year" domain="[('time_leave_status_id.active','=',True)]" help="Filters only on allocations and requests that belong to an time_leave type that is 'active' (active field is True)"/>
                    <separator/>
                    <filter string="My Requests" name="my_leaves" domain="[('employee_id.user_id','=', uid)]" help="My Leave Requests"/>
                    <separator/>
                    <filter string="My Department Leaves" help="My Department Leaves" domain="[('department_id.manager_id','=',uid)]"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="time_leave_status_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_name" string="Description" context="{'group_by':'name'}"/>
                        <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="group_category" string="Category" context="{'group_by':'category_id'}"/>
                        <filter string="Manager" context="{'group_by':'manager_id'}"/>
                        <filter name="group_type" string="Type" context="{'group_by':'time_leave_status_id'}"/>
                        <separator/>
                        <filter name="group_time_from" string="Start Month" context="{'group_by':'time_from:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- time_leave: Leave Request -->

        <record id="view_time_leave_new_calendar" model="ir.ui.view">
            <field name="name">Time Leave Request</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <calendar string="Time Leave Request" color="employee_id"
                          date_start="time_from" date_stop="time_to"
                          quick_add="False" avatar_model="hr.employee">
                    <field name="employee_id"/>
                    <field name="time_leave_status_id"/>
                </calendar>
            </field>
        </record>

        <!-- time_leave: Allocation Request -->
        <record model="ir.ui.view" id="edit_time_leave_new">
            <field name="name">Time Leave Request</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <form string="Time Leave Request">
                <field name="can_reset" invisible="1"/>
                <field name="type" invisible="1"/>
                <header>
                    <button string="Confirm" name="confirm" states="draft" type="workflow" class="oe_highlight"/>
                    <button string="Approve" name="validate" states="confirm" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                    <button string="Validate" name="second_validate" states="validate1" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                    <button string="Refuse" name="refuse" states="confirm,validate,validate1" type="workflow" groups="base.group_hr_user"/>
                    <button string="Reset to Draft" name="reset" type="workflow"
                            attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm', 'refuse'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate" statusbar_colors='{"confirm":"blue","validate1":"blue","refuse":"red"}'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly':[('state','!=','draft'),('state','!=','confirm')], 'required': [('type', '=', 'add')]}"/>
                            <field name="time_leave_status_id" context="{'employee_id':employee_id}"/>
                                <label for="number_of_hours_temp" string="Duration"/>
                            <div>
                                <group col="3" attrs="{'invisible': [('type', '=', 'add')]}">
                                    <field name="time_from" nolabel="1" on_change="onchange_time_from(time_to, time_from)" attrs="{'required':[('type', '=', 'remove')]}" class="oe_inline"/><label string="-" class="oe_inline"/>
                                    <field name="time_to" nolabel="1" on_change="onchange_time_to(time_to, time_from)"  attrs="{'required':[('type', '=', 'remove')]}" class="oe_inline"/>
                                </group>
                                <div>
                                    <field name="number_of_hours_temp" class="oe_inline"/> Hours
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="leave_type" on_change="onchange_type(leave_type)" attrs="{'readonly':[('type', '=', 'remove'),('state','!=','draft')]}" string="Mode" groups="base.group_hr_user" context="{'employee_id':employee_id}" />
                            <field name="employee_id" attrs="{'required':[('leave_type','=','employee')],'invisible':[('leave_type','=','category')]}" on_change="onchange_employee(employee_id)" groups="base.group_hr_user"/>
                            <field name="category_id" attrs="{'required':[('leave_type','=','category')], 'readonly': [('type', '=', 'remove'),('state','!=','draft'), ('state','!=','confirm')], 'invisible':[('leave_type','=','employee')]}"/>
                            <field name="department_id" attrs="{'readonly':['|', ('type','=','add'),('leave_type','=','category')],'invisible':[('leave_type','=','category')]}" groups="base.group_hr_user"/>
                        </group>
                    </group>
                    <field name="notes" nolabel="1" colspan="4" placeholder="Add a reason..." attrs="{'invisible': [('type', '=', 'remove')]}"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_time_leave_allocation_tree">
            <field name="name">hr.time_leave.allocation.tree</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <tree colors="red:state == 'refuse';blue:state == 'draft';black:state in ('confirm','validate','validate1')" string="Allocation Requests">
                    <field name="employee_id"/>
                    <field name="leave_type"/>
                    <field name="category_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="time_leave_status_id"/>
                    <field name="name"/>
                    <field name="number_of_hours" string="Allocated Hours" sum="Remaining Hours"/>
                    <field name="manager_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="time_from" invisible="1"/>
                    <!--field name="type"/-->
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- time_leave: Leaves Management -->
        <record model="ir.ui.view" id="allocation_company_new">
            <field name="name">Leaves Management</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <form string="Leaves Management">
                    <header>
                        <button string="Submit to Manager" name="confirm" states="draft" type="workflow" icon="gtk-yes"/>
                        <button string="Approve" name="validate" states="confirm" type="workflow" icon="gtk-apply"/>
                        <button string="Refuse" name="refuse" states="confirm,validate,draft" type="workflow" icon="gtk-no"/>
                        <button string="Reset to Draft" name="reset" states="confirm" type="workflow" groups="base.group_hr_manager"/>
                        <field name="state"/>
                    </header>
                    <group col="4">
                        <field name="time_leave_status_id"/>
                        <field name="type"/>
                        <field name="time_from" on_change="onchange_time_from(time_to, time_from)" attrs="{'readonly':[('type','=','add')], 'required':[('type','=','remove')]}"/>
                        <field name="time_to" on_change="onchange_time_from(time_to, time_from)" attrs="{'readonly':[('type','=','add')], 'required':[('type','=','remove')]}"/>
                        <field name="number_of_hours_temp"/>
                        <field name="manager_id"/>
                    </group>
                    <field name="name" placeholder="Add a reason..."/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_time_leave_simple">
            <field name="name">hr.time_leave.report_tree</field>
            <field name="model">hr.time_leave</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree colors="red:state == 'refuse';blue:state == ' draft';black:state in ('confirm','validate','validate1')" string="Leaves Summary">
                    <field name="employee_id"/>
                    <field name="category_id" invisible="1"/>
                    <field name="department_id" invisible="1"/>
                    <field name="type"/>
                    <field name="name"/>
                    <field name="number_of_hours" string="Number of Hours" sum="Remaining Hours"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="time_leave_status_id"/>
                    <field name="manager_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_time_leave">
            <field name="name">hr.time_leave.tree</field>
            <field name="model">hr.time_leave</field>
            <field name="arch" type="xml">
                <tree colors="red:state == 'refuse';blue:state == ' draft';black:state in ('confirm','validate','validate1')" string="Time Leave Requests">
                    <field name="employee_id"/>
                    <field name="leave_type" string="Mode" groups="base.group_no_one"/>
                    <field name="time_leave_status_id"/>
                    <field name="name"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="number_of_hours" string="Number of Hours" sum="Remaining Hours"/>
                    <field name="state"/>
                    <field name="category_id" invisible="1"/>
                    <field name="department_id" invisible="not context.get('set_visible',False)"/>
                    <field name="manager_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <menuitem name="Time Leaves" parent="hr.menu_hr_root" id="menu_open_ask_time_leave" sequence="20"/>

        <record model="ir.actions.act_window" id="open_ask_time_leave">

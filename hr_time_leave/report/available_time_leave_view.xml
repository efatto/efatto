<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_time_leave_graph">
            <field name="name">hr.time_leave.report_graph</field>
            <field name="model">hr.time_leave</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <graph string="Time Leaves Summary" type="pivot">
                    <field name="employee_id" type="row"/>
                    <field name="type" type="row"/>
                    <field name="time_from" type="col"/>
                    <field name="number_of_hours" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hr_available_time_leave_report">
            <field name="name">Time Leaves Analysis</field>
            <field name="res_model">hr.time_leave</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="view_id" eval="view_holiday_simple"/>
            <field name="domain">[('leave_type','=','employee')]</field>
            <field name="search_view_id" ref="view_hr_time_leave_filter"/>
        </record>

        <menuitem
            name="Time Leaves Analysis"
            id="menu_hr_available_time_leave_report_tree" 
            action="action_hr_available_time_leave_report" 
            parent="hr.menu_hr_reporting" sequence="5" />


    </data>
</openerp>


<?xml version="1.0"?>
<openerp>
    <data>

        <record id="invoice_form_pickings" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_it_ddt.invoice_form_view_ddt"/>
            <field name="arch" type="xml">
                <group string="Shipping Informations" position="after">
                    <group string="Pickings">
                        <field name="stock_picking_package_preparation_ids"/>
                    </group>
                </group>
                <field name="comment" position="after">
                    <field name="tax_stamp_image" widget="image" class="oe_left oe_avatar"/>
                </field>
                <field name="fiscal_position" position="after">
                    <group colspan="2" col="4">
                        <group>
                            <field name="print_net_price"/>
                            <field name="print_hide_uom"/>
                            <field name="print_shipping_address"/>
                        </group>
                        <group>
                            <field name="print_totals_in_first_page"/>
                            <field name="print_payment_in_footer"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>
<openerp>
  <data>

    <!-- Asset Category -->

    <record model="ir.ui.view" id="view_account_asset_category_form_l10nit">
      <field name="name">account.asset.category.form.l10nit</field>
      <field name="inherit_id" ref="account_asset_management.view_account_asset_category_form"/>
      <field name="model">account.asset.category</field>
      <field name="arch" type="xml">
        <field name="method_number" position="replace">
              <field name="method_number" attrs="{'invisible':[('method_time','in',['end','percent'])], 'required':[('method_time','in',['number','year'])]}"/>
              <field name="method_number_percent" attrs="{'invisible':[('method_time','in',['end','number','year'])], 'required':[('method_time','=','percent')]}"/>
        </field>
        <field name="prorata" position="replace">
              <field name="prorata" attrs="{'readonly':['|',('method_time','not in',('year', 'percent')), ('first_year_half_rata','&lt;&gt;',False)]}"/>
              <field name="first_year_half_rata" attrs="{'readonly':[('prorata','&lt;&gt;',False)]}"/>
        </field>
      </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_form_l10nit">
      <field name="name">account.asset.asset.form.l10nit</field>
      <field name="model">account.asset.asset</field>
      <field name="inherit_id" ref="account_asset_management.view_account_asset_asset_form"/>
      <field name="arch" type="xml">
           <field name="purchase_value" position="replace">
                    <field name="purchase_value" widget="monetary" options="{'currency_field': 'currency_id'}"
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
           </field>
           <field name="date_start" position="replace">
                    <field name="date_start"
                           attrs="{'readonly':[('state','!=','draft')],'required':[('type','=','normal')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
                    <field name="increase_value" 
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
           </field>
           <field name="salvage_value" position="replace">
                    <field name="salvage_value" widget="monetary" options="{'currency_field': 'company_currency_id'}"
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
                    <field name="remove_value" 
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
                    <field name="decrease_value" 
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
           </field>
           <field name="method_number" position="replace">
                    <field name="method_number" attrs="{'invisible':[('method_time','in',['end','percent'])], 'required':[('method_time','in',['number','year'])]}"/>
                    <field name="method_number_percent" attrs="{'invisible':[('method_time','in',['end','number','year'])], 'required':[('method_time','=','percent')]}"/>
           </field>
           <field name="method_end" position="attributes">
               <attribute name="invisible">[('method_time','in',['number','year','percent'])]</attribute>
           </field>
           <field name="prorata" position="attributes">
               <attribute name="readonly">['|',('method_time','not in',('year', 'percent')), ('first_year_half_rata','&lt;&gt;',False)]</attribute>
           </field>
           <field name="prorata" position="after">
                    <field name="first_year_half_rata" attrs="{'readonly':[('prorata','&lt;&gt;',False)]}"/>
           </field>
           <button name="create_move" position="attributes">
               <attribute name="context">{'create_move_from_button':True}</attribute>
           </button>
      </field>
    </record>

    <!--
        Asset History
     -->

    <record model="ir.ui.view" id="view_account_asset_history_form_l10nit">
      <field name="name">account.asset.history.form.l10nit</field>
      <field name="model">account.asset.history</field>
      <field name="inherit_id" ref="account_asset_management.view_account_asset_history_form"/>
      <field name="arch" type="xml">
        <field name="method_number" position="replace">
            <field name="method_number" attrs="{'invisible':[('method_time','in',['end','percent'])]}"/>
            <field name="method_number_percent" attrs="{'invisible':[('method_time','in',['end','year','number'])]}"/>
        </field>
        <field name="method_end" position="attributes">
           <attribute name="invisible">[('method_time','in',['number','year','percent'])]</attribute>
        </field>
      </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_history_tree_l10nit">
      <field name="name">account.asset.history.tree.l10nit</field>
      <field name="model">account.asset.history</field>
      <field name="inherit_id" ref="account_asset_management.view_account_asset_history_tree"/>
      <field name="arch" type="xml">
          <field name="method_number" position="after">
              <field name="method_number_percent" invisible="1"/>
          </field>
      </field>
    </record>

  </data>
</openerp>

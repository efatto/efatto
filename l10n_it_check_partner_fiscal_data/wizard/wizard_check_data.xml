<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_check_fiscal_data_view" model="ir.ui.view">
            <field name="name">Check partner data</field>
            <field name="model">wizard.check.data</field>
            <field name="arch" type="xml">
                <form string="Check VAT and fiscalcode in partners">
                    <group string="Partner">
                    <field name="fy"/>
                    </group>
                    <newline/>
                    <group colspan="4">
                        <separator colspan="4"/>
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" name="check_data" string="Check missing data" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        
      	<record id="wizard_check_fiscal_data_action" model="ir.actions.act_window">
            <field name="name">Check partner data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.check.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_check_fiscal_data_view"/>
        </record>
         
        <menuitem id="menu_check_fiscal_data" action="wizard_check_fiscal_data_action"
            name="Check partner data" parent="account.menu_account_end_year_treatments"/>
    </data>
</openerp>

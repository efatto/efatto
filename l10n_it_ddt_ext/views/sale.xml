<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_form_view_ddt_ext" model="ir.ui.view">
            <field name="name">sale.order.form.view.ddt.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_delivery']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='create_ddt']" position="after">
                    <field name="ddt_type_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_view_ddt_pickings" model="ir.ui.view">
            <field name="name">sale.order.form.view.ddt.pickings</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="l10n_it_ddt.sale_order_form_view_ddt"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@string='Shipping Informations']" position="after">
                    <page string="DDT and Pickings">
                        <group string="Related DDTs">
                            <field name="ddt_ids" nolabel="1"/>
                        </group>
                        <group string="Related Pickings">
                            <field name="picking_ids" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
                <group string="Related DDTs" position="replace"/>
            </field>
        </record>

    </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <template id="l10n_it_ricevute_bancarie.distinta_qweb">

        <style type="text/css">
            p {
                font-size: 11px;
                margin-bottom: 0px;
                }
            .doc_data {
                font-size: 11px;
                font-weight: bold;
                text-align: right;
                }
            .distinta_number {
                font-size: 15px;
                font-weight: bold;
                }
            .with_bord {
                border:1px solid #ddd;
                padding-bottom:3px;
                margin-bottom:5px;
                }
            .signature { min-height: 2em; }
            address { font-size: 11px; }
        </style>

        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_it_ricevute_bancarie.distinta_layout">
                    <div class="page">

                        <div id="distinta_number" class="row with_bord" style="padding: 2px;">
                            <p class="distinta_number">
                                Distinta SBF n. <span t-esc="o.name or 'Bozza'"/> su banca <span t-esc="o.config_id.name or ''"/> del <span t-field="o.registration_date"/>
                            </p>
                        </div>
                        <t t-set="gen_amount" t-value="0" />
                        <t t-as="due_date" t-foreach="get_riba_group[1]">
                        <div class="row">
                            <table id="distinta_details" class="table table-bordered table-responsive">
                                <thead>
                                    <tr>
                                        <td colspan="6" style="font-size: 14px;">
                                            <p>Scadenze del <span t-esc="due_date"/></p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <p>Row</p>
                                        </th>
                                        <th>
                                            <p>Invoice Number</p>
                                        </th>
                                        <th>
                                            <p>Invoice Date</p>
                                        </th>
                                        <th>
                                            <p>Customer</p>
                                        </th>
                                        <!--<th>-->
                                            <!--<p>ABI - CAB</p>-->
                                        <!--</th>-->
                                        <th>
                                            <p>Due Date</p>
                                        </th>
                                        <th>
                                            <p>Amount</p>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="tot_amount" t-value="0" />
                                    <t t-set="nr" t-value="1"/>
                                    <tr t-foreach="get_riba_group[0][due_date]" t-as="line">
                                        <td>
                                            <p><span t-esc="nr" /></p>
                                        </td>
                                        <td>
                                            <p><span t-field="line.invoice_number" /></p>
                                        </td>
                                        <td>
                                            <p><span t-field="line.invoice_date" /></p>
                                        </td>
                                        <td>
                                            <p><span t-field="line.partner_id" /></p>
                                        </td>
                                        <!--<td>-->
                                            <!--<p><span t-field="line.abi" /><span t-field="line.cab" /></p>-->
                                        <!--</td>-->
                                        <td>
                                            <p><span t-field="line.due_date" /></p>
                                        </td>
                                        <td class="text-right">
                                            <p><span t-field="line.amount"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></p>
                                        </td>
                                        <t t-set="tot_amount" t-value="tot_amount + line.amount" />
                                        <t t-set="nr" t-value="nr + 1" />
                                        <t t-set="gen_amount" t-value="gen_amount + line.amount" />
                                    </tr>
                                    <tr>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <!--<td/>-->
                                        <td><p>Total</p></td>
                                        <td class="text-right">
                                            <p><span t-esc="tot_amount"
                                                t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        </t>
                        <div id="total" class="row with_bord text-right" style="padding: 2px;">
                        <strong><p>TOTAL   <span t-esc="gen_amount"
                            t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                        </p></strong>
                    </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    </data>
</openerp>
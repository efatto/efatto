<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_riba_distinta_form" model="ir.ui.view">
    	    <field name="name">riba.distinta.form</field>
            <field name="model">riba.distinta</field>
            <field name="inherit_id" ref="l10n_it_ricevute_bancarie.view_riba_distinta_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form[@string='Ri.Ba. list']/notebook/page[@string='General']/field[@name='line_ids']/tree[@string='Detail']" position="attributes">
                    <attribute name="editable">top</attribute>
                </xpath>
                <xpath expr="/form[@string='Ri.Ba. list']/notebook/page[@string='General']/field[@name='line_ids']/tree[@string='Detail']/field[@name='sequence']" position="before">
                    <field name="tobe_accredited"/>
                </xpath>
                <button name="%(l10n_it_ricevute_bancarie.riba_unsolved_action)d" position="attributes">
                    <attribute name="attrs">{'invisible':['|',('type','=','incasso'),('state','not in',['accredited','accrued'])]}</attribute>
                </button>
                <field name='accreditation_move_id' position="replace">
                    <field name='accreditation_move_ids' colspan="4" nolabel="1"/>
                    <separator colspan="4" string="Accruement Entry"/>
                    <field name='accruement_move_ids' colspan="4" nolabel="1"/>
                </field>
                <field name="date_accepted" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','!=','draft')]}</attribute>
                </field>
                <field name="date_accreditation" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','not in',['draft','accepted'])]}</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
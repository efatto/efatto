<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="l10n_it_ricevute_bancarie.distinta_qweb">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="distinta_number">
                            <span>Distinta SBF n. <span t-esc="o.name or 'Bozza'"/> su banca <span t-esc="o.config_id.name or ''"/> del <span t-esc="o.registration_date" t-options='{"widget": "date"}'/></span>
                        </div>
                        <p/>
                        <t t-set="gen_amount" t-value="0" />
                        <t t-as="due_date" t-foreach="get_riba_group[1]">
                            <div class="row">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="6" style="font-size: 14px;">
                                                <p>Scadenze del <span t-esc="due_date"/></p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="width: 5%; max-width: 5%;">
                                                <p>Pos.</p>
                                            </th>
                                            <th style="width: 15%; max-width: 15%;">
                                                <p>Invoice Number</p>
                                            </th>
                                            <th style="width: 10%; max-width: 10%;">
                                                <p>Invoice Date</p>
                                            </th>
                                            <th style="width: 50%; max-width: 50%;">
                                                <p>Customer</p>
                                            </th>
                                            <th style="width: 10%; max-width: 10%;">
                                                <p>Due Date</p>
                                            </th>
                                            <th style="width: 10%; max-width: 10%;">
                                                <p>Amount</p>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="tot_amount" t-value="0"/>
                                        <t t-set="nr" t-value="1"/>
                                        <tr t-foreach="get_riba_group[0][due_date]" t-as="line">
                                            <td>
                                                <p><span t-esc="nr"/></p>
                                            </td>
                                            <td>
                                                <p><span t-field="line.invoice_number"/></p>
                                            </td>
                                            <td>
                                                <p><span t-field="line.invoice_date" /></p>
                                            </td>
                                            <td>
                                                <p><span t-field="line.partner_id"/></p>
                                            </td>
                                            <td>
                                                <p><span t-field="line.due_date"/></p>
                                            </td>
                                            <td class="text-right">
                                                <p><span t-field="line.amount"
                                                         t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></p>
                                            </td>
                                            <t t-set="tot_amount" t-value="tot_amount + line.amount" />
                                            <t t-set="nr" t-value="nr + 1" />
                                            <t t-set="gen_amount" t-value="gen_amount + line.amount" />
                                        </tr>
                                        <tr>
                                            <td colspan="4"/>
                                            <td><p>Total</p></td>
                                            <td class="text-right">
                                                <p><span t-esc="tot_amount"
                                                      t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </t>
                        <div class="row with_border">
                            <div class="col-8 text-right">
                                <p>TOTALE COMPLESSIVO</p>
                            </div>
                            <div class="col-4 text-right">
                                <p><span t-esc="gen_amount"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                    />
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
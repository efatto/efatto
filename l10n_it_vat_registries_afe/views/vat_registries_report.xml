<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_registro_iva"
              name="report_registro_iva_layouted"
              inherit_id="l10n_it_vat_registries.report_registro_iva">
        <xpath expr="//t[@t-if=&quot;move.journal_id.type == 'purchase'&quot;]/td" position="replace">
            <t t-set="invoice" t-value="env['account.invoice'].search([('move_id', '=', move.id)])"/>
            <td class="left_without_line_bold"><div style="page-break-inside: avoid" t-esc="invoice and invoice.afe_number or ''"/></td>
        </xpath>
    </template>
</odoo>

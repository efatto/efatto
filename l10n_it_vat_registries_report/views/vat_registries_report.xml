<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_registro_iva"
              name="report_registro_iva_layouted"
              inherit_id="l10n_it_vat_registries.report_registro_iva">
        <xpath expr="//div[hasclass('article')]/table" position="attributes">
            <attribute name="style">width:100%; font-size: 11px;</attribute>
        </xpath>
        <xpath expr="//div[hasclass('article')]/table" position="after">
            <colgroup>
                <col span="1" style="width: 7%;"/>
                <col span="1" style="width: 8%;"/>
                <col span="1" style="width: 4%;"/>
                <col span="1" style="width: 6%;"/>
                <col span="1" style="width: 8%;"/>
                <col span="1" style="width: 40%;"/>
                <col span="1" style="width: 9%;"/>
                <col span="1" style="width: 9%;"/>
                <col span="1" style="width: 9%;"/>
            </colgroup>
        </xpath>
        <xpath expr="//tr[@name='vat_header_invoice']" position="attributes">
            <attribute name="style">page-break-inside: avoid; border:1px solid #A1A1A1;</attribute>
        </xpath>
        <xpath expr="//tr[@name='vat_header_tax']" position="attributes">
            <attribute name="style">page-break-inside: avoid; border:1px solid #A1A1A1;</attribute>
        </xpath>
        <xpath expr="//tbody" position="before">
            <t t-set="tcolor" t-value="''" />
        </xpath>
        <xpath expr="//tr[@name='vat_body_invoice']" position="before">
            <t t-if="move_index%2 == 0">
                <t t-set="tcolor" t-value="''" />
            </t>
            <t t-else="">
                <t t-set="tcolor" t-value="'#F5F5F5'" />
            </t>
        </xpath>
        <xpath expr="//tr[@name='vat_body_invoice']" position="attributes">
            <attribute name="t-att-style">'page-break-inside: avoid; border:1px solid #A1A1A1; ' + 'background-color: ' + tcolor + ';'</attribute>
        </xpath>
        <xpath expr="//tr[@name='vat_body_tax']" position="attributes">
            <attribute name="t-att-style">'page-break-inside: avoid; border:1px solid #A1A1A1; ' + 'background-color: ' + tcolor + ';'</attribute>
        </xpath>
    </template>
</odoo>

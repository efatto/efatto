<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Create new type of user group: departmental manager -->

        <record id="mem.group_mem_department" model="res.groups">
            <field name="name">Departmental Manager</field>
            <field name="implied_ids" eval="[(4, ref('mem.group_mem_user'))]"/>
            <field name="category_id" ref="mem.module_mem_category"/>
        </record>

        <record id="mem_contract_department_rule" model="ir.rule">
            <field name="name">Vehicle contract department rule</field>
            <field name="model_id" ref="mem.model_mem_vehicle_log_contract"/>
            <field name="groups" eval="[(4, ref('mem.group_mem_department')), (4, ref('mem.group_mem_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('cost_id.vehicle_id.department', '=', False), ('vehicle_id.department.id','in',[ee.department_id.id for ee in user.employee_ids])]</field>
        </record>

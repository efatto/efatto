<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
    id="report_delivery_document_production_notes"
    inherit_id="stock.report_delivery_document"
  >
        <xpath expr="//h2" position="before">
            <br />
            <div
        class="row justify-content-end"
        t-if="o.sudo().sale_id.production_notes"
      >
                <div class="col-5">
                    <strong>Production notes:</strong>
                    <span t-field="o.sudo().sale_id.production_notes" />
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-5">
                    <strong>Dettagli colli compilato su Odoo:</strong>
                    <span>
                        <input
              type="checkbox"
              style="margin-left: 8px;"
              t-att-checked="0"
            />
                    </span>
                </div>
            </div>
        </xpath>
    </template>
</odoo>

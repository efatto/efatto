<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-extend="ClientLine" >
        <t t-jquery="t[t-esc='partner.phone or partner.mobile or &quot;&quot;']" t-operation="replace">
            <t t-esc='partner.room_id[1]' />
        </t>
    </t>
    <t t-extend="ClientListScreenWidget">
         <t t-jquery="table.client-list > thead > tr > th:last" t-operation="replace">
             <th>Room</th>
         </t>
    </t>

    <t t-extend="XmlReceipt">
        <t t-jquery="t[t-if='receipt.cashier'] > div:last" t-operation="append">
            <t t-if="receipt.room">
                <div>--------------------------------</div>
                <t t-if="receipt.client">
                    <div>Client: <t t-esc='receipt.client'/></div>
                </t>
                <div>Room: <t t-esc="receipt.room"/></div>
            </t>
        </t>
    </t>

    <t t-extend="BillReceipt">
        <t t-jquery="t[t-if='receipt.cashier'] > div:last" t-operation="append">
            <t t-if="receipt.room">
                <div>--------------------------------</div>
                <t t-if="receipt.client">
                    <div>Client: <t t-esc='receipt.client'/></div>
                </t>
                <div>Room: <t t-esc="receipt.room"/></div>
            </t>
        </t>
    </t>


</templates>
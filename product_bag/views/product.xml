<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id='view_product_template_form_bag' model='ir.ui.view'>
        <field name="name">product.template.form.bag</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="is_bag"
                    attrs="{'invisible':['|',('type','=','service'),('product_bag_id','!=',False)]}" />
                <field name="product_bag_id"
                    attrs="{'invisible': [('type','=','service')]}"
                    context="{'default_is_bag': True}" />
            </field>
        </field>
    </record>

  </data>
</openerp>

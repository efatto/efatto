<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_normal_form_view_image_attribute">
            <field name="name">product.product.form.image.attribute</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="attribute_value_ids" position="after">
                    <field name="att_image" widget="image"/>
                </field>
            </field>
        </record>
        <record id="product_template_only_form_view_prefix_required" model="ir.ui.view">
            <field name="name">product.template.product.form.prefix.required</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_code_builder.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='prefix_code']" position="attributes">
                    <attribute name="attrs">{'required': [('attribute_line_ids', '!=', [])]}</attribute>
                </xpath>
            </field>
        </record>
        <record id="attribute_tree_view_parent" model="ir.ui.view">
            <field name="name">product.attribute.tree.parent</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.attribute_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="parent_id"/>
                    <field name="child_ids"/>
                    <field name="value_ids"/>
                </field>
            </field>
        </record>
     </data>
    <data noupdate="1">
        <record forcecreate="True" id="config_parameter_product_code_builder_parent" model="ir.config_parameter">
            <field name="key">product.print_variant_images</field>
            <field name="value" eval="True"/>
        </record>
    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id='view_product_template_form_pack' model='ir.ui.view'>
        <field name="name">product.template.form.pack</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="is_pack"
                    attrs="{'invisible':['|',('type','=','service'),('product_pack_id','!=',False)]}" />
                    <label for="is_pack"
                    attrs="{'invisible':['|',('type','=','service'),('product_pack_id','!=',False)]}" />
                </div>
            </div>
            <field name="list_price" position="after">
                <field name="product_pack_id"
                    attrs="{'invisible': [('is_pack','=',True)]}"
                    context="{'default_is_pack': True}" />
            </field>
        </field>
    </record>

  </data>
</openerp>

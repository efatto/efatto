<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="template_stock_quantities_form_view">
            <field name="name">template.stock_quantities.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <field name="virtual_available" position="before">
                    <field name="outgoing_qty" />
                </field>
            </field>
        </record>
        <record id="view_stock_product_tree_details" model="ir.ui.view">
            <field name="name">product.stock.tree.details</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
                <field name="qty_available" position="after">
                    <field name="incoming_qty" string="Ordered"/>
                    <field name="outgoing_qty" string="Committed"/>
                </field>
                <field name="qty_available" position="attributes">
                    <attribute name="string">Stock</attribute>
                </field>
                <field name="virtual_available" position="attributes">
                    <attribute name="string">Available</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>

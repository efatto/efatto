<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="delivery_data" name="Delivery Data">
		    <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"/>
                    <table t-if="not o.pack_operation_ids" class="table  table-condensed" t-attf-style="color:{{o.text_color}};" >
                        <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                            <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{o.text_color}} !important;font-size:{{o.body_font+2}}px;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"/> Item</th>
                                <th t-if="o.show_img" t-attf-style="{{th_style}}"><i class="fa fa-camera"/> Image</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Product</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-question-circle"/> Status</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-map-marker"/> Location</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>

                            </tr>
                        </thead>
                        <tbody>
                          <t t-foreach="o.move_lines" t-as="move">
                             <tr t-attf-style="background-color:{{o.odd if move_parity in 'odd' else o.even}}; page-break-inside: avoid !important;">
                                <td><span t-esc="move_index + 1"/></td>
                                <td t-if="o.show_img"><span itemprop="image" t-field="move.product_id.image_small" t-field-options='{"widget": "image"}'/></td>
                               <td>
                                    <span t-field="move.product_id"/>
                               </td>
                               <td>
                                   <span t-field="move.state"/>
                               </td>
                               <td>
                                   <span t-field="move.location_id"/>
                               </td>
                               <td class="text-right">
                                   <span t-field="move.product_uom_qty"/>
                                   <span t-field="move.product_uom"/>
                               </td>
                            </tr>
                          </t>
                        </tbody>
                    </table>
                    <table t-if="o.pack_operation_ids" class="table  table-condensed" t-attf-style="color:{{o.text_color}};" >
                        <!--<t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>-->
                        <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                            <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{o.text_color}} !important;font-size:{{o.body_font+2}}px;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"/> Item</th>
                                <th t-if="o.show_img" t-attf-style="{{th_style}}"><i class="fa fa-camera"/> Image</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Product</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-barcode"/> Barcode</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-question-circle"/> Status</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-map-marker"/> Location</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                          <t t-foreach="o.pack_operation_ids" t-as="pack_operation">
                             <tr t-attf-style="background-color:{{o.odd if pack_operation_parity in 'odd' else o.even}}; page-break-inside: 
                                        avoid !important;">
                                <td><span t-esc="pack_operation_index + 1"/></td>
                                <td t-if="o.show_img">
                                    <span t-if="pack_operation.product_id" itemprop="image" t-field="pack_operation.product_id.image_small" t-field-options='{"widget": "image"}'/>
                                </td>
                               <td>
                                    <span t-field="pack_operation.product_id"/>
                                    <t t-if="not pack_operation.product_id and pack_operation.package_id">
                                        <span  t-field="pack_operation.package_id"/>
                                    </t>
                               </td>
                                    <td>
                                        <span t-if="pack_operation.lot_id">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.lot_id.name, 600, 100)" style="width:300px;height:50px"/>
                                        </span>
                                        <span t-if="pack_operation.product_id and not pack_operation.lot_id and pack_operation.product_id.ean13">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', pack_operation.product_id.ean13, 600, 100)" style="width:300px;height:50px"/>
                                        </span>
                                        <span t-if="pack_operation.package_id and not pack_operation.product_id">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.package_id.name, 600, 100)" style="width:300px;height:50px"/>
                                        </span>
                                    </td>

				<!--
                                <t t-if="has_serial_number">
                                    <td t-if="pack_operation.pack_lot_ids">
                                        <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                            <thead>
                                                <tr><th>Lot</th><th>Qty</th></tr>
                                            </thead>
                                            <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                                <td>
                                                    <span t-field="packlot.lot_id"/>
                                                    <t t-if="not packlot.lot_id">
                                                        <span t-field="packlot.lot_name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="packlot.qty"/> <t t-if="o.picking_type_id.use_existing_lots and o.state!='done'"> /
                                                    <span t-field="packlot.qty_todo"/></t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td t-if="not pack_operation.pack_lot_ids"/>
                                </t>

				-->

                               <td>
                                   <span t-field="pack_operation.picking_id.move_lines[pack_operation_index].state"/>
                               </td>
                               <td>
                                    <span t-field="pack_operation.location_id"/>
                                    <span t-if="pack_operation.package_id">:</span>
                                    <span t-field="pack_operation.package_id"/>
                               </td>
                               <td class="text-right">
                                   <span t-field="pack_operation.product_qty"/>
                                   <span t-field="pack_operation.product_uom_id"/>
                               </td>
                            </tr>
                          </t>
                        </tbody>
                    </table>
                    <div class="col-xs-12" style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
			<p t-if="o.note" t-field="o.note"/>
                        <div class="col-xs-6 pull-left mt16 row">
                            <p>
                                <strong>Customer Signature:</strong><span t-esc="35*'.'"/>
                            </p>
                        </div>
                        <div class="col-xs-6 pull-right mt16 row">
                            <p class="text-right">
                                <strong>Stamp:</strong><span t-esc="45*'.'"/>
                            </p>
                        </div>
                    </div>

    </template>
</data>
</openerp>


<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="DN_1_document" name="Modern Delivery Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header">
                       <div class="col-xs-7" style="padding-left:0px;">
                         <span t-if="o.dn_logo">
			    <span itemprop="image" t-field="o.dn_logo" t-field-options='{"widget": "image"}'/>
			 </span>
			 <span t-if="not o.dn_logo and company.invoice_logo">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image"}'/>
			</span>
			 <span t-if="not o.dn_logo and not company.invoice_logo and company.logo">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			</span>
			 <span t-if="not o.dn_logo and not company.logo and not company.invoice_logo">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			</span>
                       <div t-if="company.twitter or company.facebook or company.facebook" t-attf-style="background-color:{{o.theme_color}}; width:auto; 
			float:left; padding-left:15px; color:{{o.theme_txt_color}}; 
				   padding-right:15px; padding-top:2px; padding-bottom:2px;">
                      <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      <span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                       </div>
                       </div>
                       <div class="col-xs-5 mb8 pull-right" style="padding-bottom:2px;padding-right:0px;">
                         <div class="pull-right" style="width:auto;padding-left:15px;">
				<t t-call="professional_templates.company_address"/>
			 </div>
                       </div>
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
		      <div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px;">
                           <div  t-attf-style="background-color:{{o.theme_color}}; width:auto; float:left; padding-top:2px; padding-bottom:2px; 
					color:{{o.theme_txt_color}};">
                               <span t-attf-style="font-size:{{o.body_font+6}}px; padding-left:5px; padding-right:5px;"><span class="fa fa-building fa-lg"/>&#160;Customer Address</span>
                           </div>
		      </div>
		      <div class="col-xs-6 pull-right" style="padding-left:0px; padding-right:0px;">
                           <div  t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-top:2px; padding-bottom:2px; 
			     color:{{o.theme_txt_color}};">
					<span t-attf-style="font-size:{{o.body_font+6}}px; padding-left:5px; padding-right:5px;"><span class="fa fa-truck fa-lg"/> 
					<span>Delivery Address</span></span>
  		           </div>
                      </div>
                 </div> <!--end of wrapper-->
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
                   <div class="col-xs-6 pull-left" style="padding-left:8px; padding-right:0px;">
                            <div t-if="o.partner_id" t-attf-style="font-size:{{o.body_font+6}}px;color:{{o.cust_color}}; margin-top:5px; margin-bottom:5px; margin-left:0px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			    </div>
                            <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                  t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"], "no_marker": false}'/>
                                  <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                   </div>
		   <div class="col-xs-6 pull-right text-right" style="padding-left:0px; padding-right:8px;">
                            <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                <div>
                                    <address t-field="o.move_lines[0].partner_id" style="margin-bottom:0px;"
                                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
                                </div>
                            </div>
                            <div t-if="(o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id == o.partner_id.id) or 
				o.move_lines and not o.move_lines[0].partner_id">
                                <div t-field="o.partner_id" style="margin-bottom:0px;"
                                   t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
                            </div>

                   </div>
                 </div> <!--end of wrapper-->
                   <div class="col-xs-5 pull-left text-left mt32" style="padding-left:0px;">
                       <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" 
                                 style="width:300px;height:50px;"/>
                   </div>

                   <div class="col-xs-7 pull-right" t-attf-style="background-color:{{o.theme_color}}; color:{{o.theme_txt_color}};">
                          <h3 style="margin-top:10px;">
  		                <span>Delivery Note </span>
                		<span t-field="o.name"/>
                           </h3>
                        <t t-set="div_style" t-value="'padding-left:8px;font-size:{}px;padding-right:8px; width:auto;float:left; margin-right:15px;'.format(o.body_font+2)"></t>
                        <div t-if="o.date_done" t-attf-style="{{div_style}}">
                            <strong style="white-space:nowrap;">Date of Transfer:</strong>
                            <p t-field="o.date_done"/>
                        </div>
                        <div t-if="o.number_of_packages" t-attf-style="{{div_style}}">
                            <strong style="white-space:nowrap;">Packages:</strong>
                            <p t-field="o.number_of_packages"/>
                        </div>

			   <div id="div_sched_date" t-if="o.min_date" t-attf-style="{{div_style}}">
                   		 <strong style="white-space:nowrap;">Scheduled Date:</strong>
                    		<p t-field="o.min_date"/>
                	   </div>
                   </div>
                   <div class="col-xs-12 mt8">
                      <p t-if="o.picking_type_id"><strong>Order (Origin):</strong><span t-field="o.picking_type_id"/></p>
                   </div>
                <!-- DATA-->
                <t t-call="professional_templates.delivery_data"/>
                <!--/DATA-->
               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->
    </template>
</data>
</openerp>

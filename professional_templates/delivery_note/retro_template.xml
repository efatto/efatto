<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="DN_3_document" name="Retro Delivery Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="padding-bottom:0px; padding-left:0px; padding-right:0px; color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header">
                       <div class="col-xs-7 pull-right" style="padding-bottom:10px; text-align:right; padding-left:0px; padding-right:0px;">
                         <div t-if="o.dn_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="o.dn_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.dn_logo and company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.dn_logo and not company.invoice_logo and company.logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.dn_logo and not company.logo and not company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
                	 <div t-if="company.twitter or company.facebook or company.googleplus" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; 
				   padding-right:15px; padding-top:2px; padding-bottom:2px;" class="pull-right">
                      		<span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      		<span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      		<span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                  	 </div>
                       </div>
                       <div class="col-xs-5 mb8 pull-left" style="padding-bottom:2px;padding-left:0px;">
				<t t-call="professional_templates.company_address"/>
                       </div>
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
		   <div class="col-xs-7 pull-left" style="padding-left:0px; padding-right:0px; "> 
                     <div  t-attf-style="float:left; width:auto; max-width:100%; margin-top:0px;padding-top:1px;padding-left:15px;padding-right:15px;color:{{o.theme_txt_color}} !important;background-color:{{o.theme_color}} !important;">
                           <h3 style="margin-top:10px;">
                		<span>Delivery Note  </span>
                		<span t-field="o.name"/>
                           </h3>
			</div>
	           </div>
		   <div class="col-xs-5 pull-right text-right mb8" style="padding-right:0px;">
                       <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" 
                                 style="width:300px;height:50px;"/>
                   </div>

                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
                   <div class="col-xs-6 pull-left">
                 	    <div class="pull-left" style="padding-top:5px; padding-bottom:0px; width:100%;">
                        	<span t-attf-style="font-size:{{o.body_font+6}}px;font-weight:bold;">
					Customer Address</span>
                 	    </div>
			    <div class="pull-left" style="width:100%;">
                               <div t-if="o.partner_id" t-attf-style="font-size:{{o.body_font+6}}px;color:{{o.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			       </div>
                                <div t-field="o.partner_id" style="margin-bottom:0px;"
                                   t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
				   <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
			    </div>
                   </div>
		   <div class="col-xs-6 pull-right" style="text-align:right;">
	                <span t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">Delivery Address</span>

                          <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                <div>
                                    <address t-field="o.move_lines[0].partner_id" style="margin-bottom:0px;"
                                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
                                </div>
                          </div>
                          <div t-if="(o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id == o.partner_id.id) or 
				o.move_lines and not o.move_lines[0].partner_id">
                                <address t-field="o.partner_id"
                                   t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "website", "email"]}'/>
                          </div>
		   </div>

                 </div> <!--end of wrapper2-->
		 <div class="col-xs-12 mt8 mb8" t-attf-style="padding-left:0px; padding-right:0px;">
                  <t t-set="div_style" t-value="'color:{}; background-color:{} !important; padding-left:8px; padding-right:8px;padding-top:8px; width:auto;float:left; margin-right:15px;font-size:{}px;'.format(o.theme_txt_color, o.theme_color, o.body_font+2)"></t>

                   <div t-if="o.number_of_packages" t-attf-style="{{div_style}}">
                            <strong style="white-space:nowrap;">Packages:</strong>
                         <p style="white-space:nowrap;" t-field="o.number_of_packages"/>
                   </div>
                   <div t-if="o.date_done" t-attf-style="{{div_style}}">
                            <strong style="white-space:nowrap;">Date of Transfer:</strong>
                        <p style="white-space:nowrap;" t-field="o.date_done"/>
                   </div>
                   <div id="div_sched_date" t-if="o.min_date" t-attf-style="{{div_style}}">
                     <strong style="white-space:nowrap;">Scheduled Date:</strong>
                     <p style="white-space:nowrap;" t-field="o.min_date"/>
                   </div>
		 </div>
                 <div class="col-xs-12 mt8">
                  <p t-if="o.picking_type_id"><strong>Order (Origin):</strong><span t-field="o.picking_type_id"/></p>
                </div>
                <!-- DATA-->
                <t t-call="professional_templates.delivery_data"/>
                <!--/DATA-->
               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->

    </template>
</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="INVOICE_4_document" name="TVA Invoice Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header">
                       <div class="col-xs-5 pull-left" t-attf-style="padding:15px; border:1px solid {{o.text_color}};">
			    <t t-call="professional_templates.company_address"/>
                       </div>
			<div class="col-xs-3 pull-right" t-attf-style="border:1px solid {{o.text_color}}; color:{{o.text_color}};">
		 		<span style="font-weight:bold;">Date: </span><span t-if="o.date_invoice" t-field="o.date_invoice"></span>
			</div>
                       <div class="col-xs-7 pull-right" style="text-align:right; padding-left:0px; padding-right:0px; padding-top:1px;">
                         <div t-if="o.invoice_logo" style="width:100%; text-align:right; padding-bottom:3px; padding-top:3px;">
			    <span itemprop="image" t-field="o.invoice_logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.invoice_logo and company.invoice_logo" style="width:100%; text-align:right;padding-bottom:8px;">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.invoice_logo and not company.invoice_logo and company.logo" style="width:100%; text-align:right;padding-bottom:8px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.invoice_logo and not company.logo and not company.invoice_logo" style="width:100%;text-align:right;padding-bottom:8px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;}'/>
			 </div>
                        <div t-if="company.twitter or company.facebook or company.facebook" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; padding-right:15px; padding-top:4px; padding-bottom:2px;" class="pull-right">
                      <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      <span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                        </div>

                       </div> 
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
                   	<div class="col-xs-5 pull-right" t-attf-style="margin-left:3px;border:1px solid {{o.text_color}}; padding:15px;">
                            <div t-if="o.partner_id" t-attf-style="color:{{o.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;font-size:{{o.body_font+6}}px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			    </div>
                            <address t-field="o.partner_id" style="margin-bottom:0px;" 
                               t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"], "no_marker": false}'/>                                       <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>

                  	</div>
			<!--<div class="col-xs-6 pull-left" style=" margin-right:1px; height:80px; text-align:center; border:1px solid; border-top:0px;">
                                <span style="font-weight:bold; font-size:60px; color:#f9f9f9;">Stamp</span>
                        </div> -->
		  	<div class="col-xs-5" style="padding-left:0px; padding-right:0px; padding-top:5px; padding-bottom:0px; "> 
                     	   <div  t-attf-style="float:left; width:100%; margin-top:0px;padding-top:0px;padding-left:15px;padding-right:15px;color:{{o.text_color}} !important; border:1px solid {{o.text_color}};">
                             <h4 id="title" style="margin-bottom:10px;">
                                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice No.</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                <span t-if="o.type == 'out_refund'">Refund</span>
                                <span t-if="o.type == 'in_refund'">Supplier Refund</span>
                                <span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
                                <span t-field="o.number"/>
                            </h4>
			   </div>
	                </div>
			
		
		 <div class="col-xs-12" style="padding:8px;"/> <!--Spacing-->
                 <div class="col-xs-12" t-attf-style="border:1px solid {{o.text_color}}; padding-left:0px; padding-right:0px; padding-bottom:0px; padding-top:5px;"><!--start of wrapper -->
                           <t t-set="div_style" t-value="'width:auto;max-width:100%;font-size:{}px;padding-left:10px; padding-right:10px; float:left; margin-left:25px;'.format(o.body_font+2)"></t>
                           <div t-if="o.fiscal_position" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Fiscal Position:</strong>
                                <p t-field="o.fiscal_position"/>
                           </div>
                           <div t-if="o.origin" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Source Document:</strong>
                                <p t-field="o.origin"/>
                           </div>
                           <div t-if="o.name" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Reference:</strong>
                                <p t-field="o.name"/>
                           </div>
                           <div t-if="o.date_due" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Due Date:</strong>
                                <p t-field="o.date_due"/>
                           </div>
                           <div t-if="o.date_invoice" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Invoice Date:</strong>
                                <p t-field="o.date_invoice"/>
                           </div>


                 </div> <!--end of wrapper2-->
		 <div class="col-xs-12" style="padding:8px;"/> <!--Spacing-->
                <!-- DATA-->
                <t t-call="professional_templates.invoice_data"/>
                <!--/DATA-->
               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->

    </template>
<template id="INVOICE_4_duplicate" inherit_id="INVOICE_4_document" primary="True" name="TVA Duplicate">
    <xpath expr="//h4[@id='title']" position="replace">
        <h4>
            <span>Duplicate# </span>
            <span t-field="o.number"/>
        </h4>
    </xpath>
</template>
</data>
</openerp>

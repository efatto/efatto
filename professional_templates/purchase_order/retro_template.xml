<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="PO_3_document" name="Retro PO Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header">
                       <div class="col-xs-7 pull-right" style="padding-bottom:10px;padding-left:0px; padding-right:0px;">
                         <div t-if="o.po_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="o.po_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.po_logo and company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.po_logo and not company.invoice_logo and company.logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.po_logo and not company.logo and not company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
                	 <div t-if="company.twitter or company.facebook or company.googleplus" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; 
				   padding-right:15px; padding-top:2px; padding-bottom:2px;" class="pull-right">
                      		<span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      		<span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      		<span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                  	 </div>
                       </div>
                       <div class="col-xs-5 mb8 pull-left" style="padding-bottom:2px;padding-left:0px;">
				<t t-call="professional_templates.company_address"/>
                       </div>
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
		   <div class="col-xs-12" style="padding-left:0px; padding-right:0px; "> 
                     <div  t-attf-style="float:left; width:auto; max-width:100%; margin-top:0px;padding-top:1px;padding-left:15px;padding-right:15px;color:{{o.theme_txt_color}} !important;background-color:{{o.theme_color}} !important;">
                           <h3 style="margin-top:10px;">
		                <span t-if="o.state != 'draft'">Purchase Order  </span>
                		<span t-if="o.state == 'draft'">Request for Quotation  </span>
                		<span t-field="o.name"/>

                           </h3>
			</div>
	           </div>
		
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
                   <div class="col-xs-6 pull-left">
                 	    <div class="pull-left" style="padding-top:5px; padding-bottom:0px; width:100%;">
                        	<span t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
					<span class="fa fa-building"/> Vendor Address:</span>
                 	    </div>
			    <div class="pull-left" style="width:100%;">
                               <div t-if="o.partner_id" t-attf-style="color:{{o.cust_color}};font-size:{{o.body_font+6}}px; margin-top:2px; margin-bottom:5px; margin-left:0px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			       </div>
                               <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                       t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                                       <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>

			    </div>
                   </div>
		   <div class="col-xs-6 pull-right" style="text-align:right;">
	                <span t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;"><span class="fa fa-truck"/> Shipping Address:</span>
                        <div t-if="o.dest_address_id">
                            <address t-field="o.dest_address_id" style="margin-bottom:0px;"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
                        </div>

                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                             <span t-field="o.picking_type_id.warehouse_id.name"/>
                             <address t-field="o.picking_type_id.warehouse_id.partner_id" style="margin-bottom:0px;" 
                            t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                         </div>
		   </div>
                 </div> <!--end of wrapper2-->
		 <div class="col-xs-12 mt8 mb8 text-center" t-attf-style="padding-left:0px; padding-right:0px;">
                           <t t-set="div_style" t-value="'background-color:{}; width:auto; display:inline-block;color:{};font-size:{}px;float:left;
				 padding-left:8px; padding-right:8px; padding-bottom:0px; margin-left:8px; margin-right:8px;padding-top:5px;margin-bottom:5px;'.format(o.theme_color, o.theme_txt_color, o.body_font+2)"/>
                           <div t-if="o.name" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Our Reference:</strong>
                                <p t-field="o.name"/>
                           </div>
                           <div t-if="o.partner_ref" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Your Reference:</strong>
                                <p t-field="o.partner_ref"/>
                           </div>
                           <div t-if="o.date_order" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Order Date:</strong>
                                <p t-field="o.date_order"/>
                           </div>
                           <div t-if="o.minimum_planned_date" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Date Expected:</strong>
                                <p t-field="o.minimum_planned_date"/>
                           </div>
                           <div t-if="o.date_approve" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Date Approved:</strong>
                                <p t-field="o.date_approve"/>
                           </div>
                           <div t-if="o.validator" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Approved By:</strong>
                                <p t-field="o.validator"/>
                           </div>
                           <div t-if="o.fiscal_position" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Fiscal Position:</strong>
                                <p t-field="o.fiscal_position"/>
                           </div>
                           <div t-if="o.payment_term_id" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;">Payment Terms:</strong>
                                <p t-field="o.payment_term_id"/>
                           </div>
		 </div>
                  <!-- DATA-->
                  <t t-call="professional_templates.purchase_data"/>
                  <!--/DATA-->

             </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->
    </template>
</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="RFQ_1_document" name="Modern RFQ Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="padding-bottom:0px; padding-left:0px; padding-right:0px; color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header col-xs-12">
                     <div class="col-xs-7" style="padding-left:0px;">
                          <span t-if="o.rfq_logo">
		          <span itemprop="image" t-field="o.rfq_logo" t-field-options='{"widget": "image"}'/>
		          </span>
			  <span t-if="not o.rfq_logo and company.invoice_logo">
			  <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image"}'/>
			  </span>
			  <span t-if="not o.rfq_logo and not company.invoice_logo and company.logo">
			  <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			  </span>
			  <span t-if="not o.rfq_logo and not company.logo and not company.invoice_logo">
			  <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			  </span>
                         <div t-if="company.twitter or company.facebook or company.facebook" t-attf-style="background-color:{{o.theme_color}}; width:auto; 
		float:left; padding-left:15px; color:{{o.theme_txt_color}}; 
				   padding-right:15px; padding-top:2px; padding-bottom:2px;">
                         <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                         <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                         <span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                  </div>
                     </div>
                     <div class="col-xs-5 mb8 pull-right" style="padding-bottom:2px;padding-right:0px;">
                         <div class="pull-right" style="width:auto;padding-left:15px;">
		            <t t-call="professional_templates.company_address"/>
			 </div>
                     </div>
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page col-xs-12" t-attf-style="margin-top:0px; padding-top:5px; padding-left:0px; padding-right:0px; color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
		      <div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px;">
                           <div  t-attf-style="background-color:{{o.theme_color}}; width:auto; float:left; padding-top:2px; padding-bottom:2px; 
					color:{{o.theme_txt_color}};">
                               <span t-attf-style="font-size:{{o.body_font+6}}px; padding-left:5px; padding-right:5px;"><span class="fa fa-building fa-lg"/>&#160;Vendor Address</span>
                           </div>
		      </div>
		      <div class="col-xs-6 pull-right" style="padding-left:0px; padding-right:0px;">
                           <div  t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-top:2px; padding-bottom:2px; 
			     color:{{o.theme_txt_color}};">
					<span t-attf-style="font-size:{{o.body_font+6}}px; padding-left:5px; padding-right:5px;"><span class="fa fa-truck fa-lg"/> 
					<span>Shipping Address</span></span>
  		           </div>
                      </div>
                 </div> <!--end of wrapper-->
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
                   <div class="col-xs-6 pull-left mt8" t-attf-style="padding-left:8px; padding-right:0px;">
                            <h4 t-if="o.partner_id" t-attf-style="color:{{o.cust_color}}; margin-top:5px; margin-bottom:5px; margin-left:0px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			    </h4>
                            <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                     t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                                     <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                   </div>
		   <div class="col-xs-6 pull-right text-right" style="padding-left:0px; padding-right:8px;">
                   	<div t-if="o.dest_address_id">
                          <address t-field="o.dest_address_id"
                               t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
                        </div>
                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                           <span t-field="o.picking_type_id.warehouse_id.name"/>
                           <address t-field="o.picking_type_id.warehouse_id.partner_id"
                               t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                        </div>
                   </div>
                 </div> <!--end of wrapper-->
                   <div class="col-xs-8 pull-right" t-attf-style="background-color:{{o.theme_color}}; color:{{o.theme_txt_color}}; padding-bottom:10px;">
                          <h3>
        		        <span>Request for Quotation #</span>
                		<span t-field="o.name"/>
                           </h3>
                   </div>
		   <div  class="col-xs-12" style="padding:8px;"></div>
                   <div  class="col-xs-12" style="padding:8px;"/>
                   <!-- DATA-->
                   <t t-call="professional_templates.rfq_data"/>
                   <!--/DATA-->
               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->
    </template>
</data>
</openerp>

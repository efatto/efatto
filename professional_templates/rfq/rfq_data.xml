<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="rfq_data" name="RFQ Data">
          <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"/>
          <table class="table  table-condensed" t-attf-style="color:{{o.text_color}};" >
                        <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                            <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{o.text_color}} !important;font-size:{{o.body_font+2}}px;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"/> Item</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Description</th>
                                <th class="text-center" t-attf-style="{{th_style}}"><i class="fa fa-calendar"/> Expected Date</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                          <t t-foreach="o.order_line" t-as="line">
                             <tr t-attf-style="background-color:{{o.odd if line_parity in 'odd' else o.even}}; page-break-inside: avoid !important;">
                                <td><span t-esc="line_index + 1"/></td>
                               <td>
                                    <span t-field="line.name"/>
                               </td>
                               <td class="text-center">
                                   <span t-field="line.date_planned"/>
                               </td>
                               <td class="text-right">
                                   <span t-field="line.product_qty"/>
                                   <span t-field="line.product_uom" groups="product.group_uom"/>
                               </td>
                            </tr>
                          </t>
                        </tbody>
          </table>
          <div class="col-xs-12 pull-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                     <p t-if="o.payment_term_id.note">
                        <strong>Payment Term Notes:</strong> <span t-field="o.payment_term_id.note"/>
                     </p>
                     <p id="payment_term" t-if="not o.payment_term_id and o.partner_id.property_payment_term">
                        <strong>Payment Term Notes:</strong> <span t-field="o.partner_id.property_payment_term.note"/>
                     </p>
                     <p t-if="o.incoterm_id">
                        <strong>Shipping Terms:</strong> <span t-field="o.incoterm_id"/>
                     </p>

                     <p t-if="o.fiscal_position.note">
                         <strong>Fiscal Position Remark:</strong> <span t-field="o.fiscal_position.note"/>
                     </p>
                     <p t-if="o.notes">
                        <span t-field="o.notes"/>
                     </p>
          </div>
    </template>
</data>
</openerp>


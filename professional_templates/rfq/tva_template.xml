<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="RFQ_4_document" name="TVA RFQ Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="padding-bottom:0px; padding-left:0px; padding-right:0px; color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header col-xs-12">
                       <div class="col-xs-5 pull-left" t-attf-style="padding:15px; border:1px solid {{o.text_color}};">
				<t t-call="professional_templates.company_address"/>	
                       </div>
			<div class="col-xs-5 pull-right" t-attf-style="border: 1px solid {{o.text_color}}; color:{{o.text_color}};">
                             <strong>Date:</strong>
                             <span t-field="o.date_order"/>
			</div>
                       <div class="col-xs-7 pull-right" style="text-align:right; padding-left:0px; padding-right:0px;">
                         <div t-if="o.rfq_logo" style="width:100%; text-align:right; padding-bottom:3px; padding-top:3px;">
			    <span itemprop="image" t-field="o.rfq_logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.rfq_logo and company.invoice_logo" style="width:100%; text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.rfq_logo and not company.invoice_logo and company.logo" style="width:100%; text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.rfq_logo and not company.logo and not company.invoice_logo" style="width:100%;text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
                      <div t-if="company.twitter or company.facebook or company.googleplus" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; 
                                   padding-right:15px; padding-top:2px; padding-bottom:2px;">
                      <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      <span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                  </div>

                       </div> 
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
		  	<div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px;padding-bottom:0px; "> 
                     	   <div  t-attf-style="float:left; width:100%; margin-top:0px;padding-top:1px;padding-left:15px;padding-right:15px;
				color:{{o.text_color}} !important; border:1px solid {{o.text_color}}">
                             <h3 id="title" style="margin-top:10px;">
                		<span>R.F.Q  </span>
               			<span t-field="o.name"/>
                             </h3>
			   </div>
	                </div>
                   	<div class="col-xs-5 pull-right" t-attf-style="border: 1px solid {{o.text_color}};padding:15px;">
                            <div t-if="o.partner_id" t-attf-style="color:{{o.cust_color}};white-space:nowrap;font-size:{{o.body_font+6}}px;margin-top:2px;margin-bottom:5px; margin-left:0px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			    </div>
                            <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                     t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                                     <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>

                  	</div>
			<div class="col-xs-6 pull-left" style="padding:8px;"/>
                   <div class="col-xs-6 pull-left text-left" style="border: 1px solid; page-break-inside: avoid !important; padding:15px;">
	                        <strong t-attf-style="font-size:{{o.body_font+6}}px;"><span class="fa fa-truck"/> Shipping address:</strong>
        		        <div t-if="o.dest_address_id">
                        	    <div t-field="o.dest_address_id" style="margin-bottom:0px;"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "website", "email"]}'/>
                                </div>

                                <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                    <div t-field="o.picking_type_id.warehouse_id.partner_id" t-field-options='{"widget": "contact", "fields": 
					["address", "phone", "fax", "email", "website"]}'/>
                    		</div>

                   </div>
		   <div class="col-xs-12 pull-right" style="padding:8px;"/>
                   <!-- DATA-->
                   <t t-call="professional_templates.rfq_data"/>
                   <!--/DATA-->

               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->

    </template>
</data>
</openerp>

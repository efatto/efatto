<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="order_data" name="Sale Order Data">
           <div t-if="o.project_title" class="col-xs-12" t-attf-style="color:{{o.theme_txt_color}};text-align:center; padding-left:0px; padding-right:0px;font-size:{{o.body_font+2}}px;">
                <div t-attf-style="width:auto; display:inline-block; background-color:{{o.theme_color}};padding-left:8px; padding-right:8px;">
                          <span style="margin-top:8px; margin-bottom:8px;"><span t-field="o.project_title"/></span>
                </div>
           </div>
           <div class="col-xs-12" style="padding:8px;"/>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])"/>
            <t t-set="display_taxes" t-value="any([l.tax_id for l in o.order_line])"/>
            <t t-set="col_span" t-value="8 if display_discount else 7"/>
            <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"/>
                    <table class="table  table-condensed" t-attf-style="color:{{o.text_color}};" >
                        <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                            <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{o.text_color}} !important;font-size:{{o.body_font+2}}px;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"/> Item</th>
                                <th t-if="o.show_img" t-attf-style="{{th_style}}"><i class="fa fa-camera"/> Image</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Description</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-tags"/> Unit Price</th>
                                <th t-if="display_discount" class="text-right" t-attf-style="{{th_style}}" 
                                                groups="sale.group_discount_per_so_line"><i class="fa fa-minus-square"/> Discount(%)</th>
                                <th t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"/> Taxes</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-money"/> Price</th>

                            </tr>
                        </thead>
                        <tbody>
			<t t-foreach="o.sale_layout_lines(order_id = o.id)" t-as="p">
                          <!--<t t-foreach="o.order_line" t-as="l">-->
                          <!-- Name of the category -->
      	                  <t t-call="professional_templates.category_template">
			    <t t-set="cols" t-value="col_span"	/>
			  </t>
                          <!-- Lines associated -->
                          <t t-foreach="p['lines']" t-as="l">
                             <tr t-attf-style="color:{{o.text_color}};background-color:{{o.odd if l_parity in 'odd' else o.even}};
				 page-break-inside: avoid">
                                <td><span t-esc="l_index + 1"/></td>
                                <td t-if="o.show_img"><span itemprop="image" t-field="l.product_id.image_small" t-field-options='{"widget": "image"}'/></td>
                                <td><span t-field="l.name"/></td>
                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span t-field="l.product_uom"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                     <span t-field="l.price_unit" t-field-options='{"widget": "monetary", "display_currency":"o.pricelist_id.currency_id"}'/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount"/></td>
                                <td t-if="display_taxes" class="text-center">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                </td>
                                <td class="text-right">
                                        <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": 
                                        "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                          </t>
        		            <!-- Subtotal -->
                         <t t-call="professional_templates.subtotal_template">
			    <t t-set="cols" t-value="col_span"	/>
			  </t>

                         <!-- Separator -->
                         <t t-call="professional_templates.separator_template">
			    <t t-set="cols" t-value="col_span"	/>
			  </t>

                          <!-- Pagebreak -->
                         <t t-if="'pagebreak' in p['category'] and p['category'].pagebreak is True">
                           <t t-if="p_index &lt; p_size - 1">
                            <![CDATA[
                                </tbody>
                            </table>
                            <p style="page-break-before:always;"> </p>
                            <table class="table table-condensed">
                            ]]>
                            <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                              <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid #ddd !important;font-size:{{o.body_font+2}}px;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"/> Item</th>
                                <th t-if="o.show_img" t-attf-style="{{th_style}}"><i class="fa fa-camera"/> Image</th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Description</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-money"/> Unit Price</th>
                                <th t-if="display_discount" class="text-right" t-attf-style="{{th_style}}" 
                                                groups="sale.group_discount_per_so_line"><i class="fa fa-minus-square"/> Discount(%)</th>
                                <th t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"/> Taxes</th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-money"/> Price</th>


                              </tr>
                           </thead>
                            <![CDATA[
                                <tbody>
                            ]]>
                           </t>
                         </t>

                      </t>
                        </tbody>
                    </table>
                   <div class="col-xs-5 pull-right" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                    <table class="table table-condensed" t-attf-style="color:{{o.text_color}};"><tbody>
                        <tr t-if="display_taxes" t-attf-style="border-top: 1px solid {{o.text_color}};" >
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Total Without Taxes</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                                <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": 
                                "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr t-if="display_taxes">
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr t-attf-style="border-bottom: 1px solid {{o.text_color}};">
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Total</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                                 <strong><span  style="font-weight:bold; text-decoration:underline;" t-field="o.amount_total" t-field-options='{"widget": 
                                 "monetary", "display_currency": "o.pricelist_id.currency_id"}'/></strong>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                   </div>
                <div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                     <p t-if="o.payment_term.note">
                        <strong>Payment Term Notes: </strong> <span t-field="o.payment_term.note"/>
                     </p>
                     <p id="payment_term" t-if="not o.payment_term.note and o.partner_id.property_payment_term.note">
                        <strong>Payment Term Notes: </strong><span t-field="o.partner_id.property_payment_term.note"/>
                     </p>
                     <p t-if="o.incoterm">
                        <strong>Shipping Terms: </strong><span t-field="o.incoterm"/>
                     </p>

                     <p t-if="o.fiscal_position.note">
                         <strong>Fiscal Position Remark:</strong> <span t-field="o.fiscal_position.note"/>
                     </p>
                    <p t-if="o.aiw_report">
                        <strong>Amount in Words:</strong><span style="text-decoration:underline;" t-field="o.amount_words"/>
                    </p>
                </div>
                <div class="col-xs-12" style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                    <p t-if="o.note">
                        <span t-field="o.note"/>
                    </p>
                    <div class="col-xs-6 pull-left mt16 row">
                        <p>
                            <strong>Customer Signature:</strong><span t-esc="35*'.'"/>
                        </p>
                    </div>
                    <div class="col-xs-6 pull-right mt16 row">
                        <p class="text-right">
                            <strong>Stamp:</strong><span t-esc="45*'.'"/>
                        </p>
                    </div>
                </div>

    </template>
</data>
</openerp>



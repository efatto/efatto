<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="SO_3_document" name="Retro SO Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header">
                       <div class="col-xs-7 pull-right text-right" style="padding-left:0px; padding-right:0px;">
                         <div t-if="o.order_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="o.order_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.order_logo and company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.order_logo and not company.invoice_logo and company.logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
			 <div t-if="not o.order_logo and not company.logo and not company.invoice_logo" style="padding-bottom:8px;" class="pull-right">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image"}'/>
			 </div>
                	 <div t-if="company.twitter or company.facebook or company.googleplus" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; 
				   padding-right:15px; padding-top:2px; padding-bottom:2px;" class="pull-right">
                      		<span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                      		<span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                      		<span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                  	 </div>
                       </div>
                       <div class="col-xs-5 mb8 pull-left" style="padding-bottom:2px;padding-left:0px;">
                                <t t-call="professional_templates.company_address"/>

                       </div>
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
		   <div class="col-xs-12" style="padding-left:0px; padding-right:0px; "> 
                     <div  t-attf-style="float:left; width:auto; max-width:100%; margin-top:0px;padding-top:0px;padding-left:15px;padding-right:15px;color:{{o.theme_txt_color}} !important;background-color:{{o.theme_color}} !important;">
                           <h3 style="margin-top:10px;">
		                <span t-if="o.state not in ['draft','sent']">Order  </span>
                		<span t-if="o.state in ['draft','sent']">Quotation  </span>
                		<span t-field="o.name"/>

                           </h3>
			</div>
	           </div>
		
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
                   <div class="col-xs-6 pull-left">
                 	    <div class="pull-left" style="padding-top:5px; padding-bottom:0px; width:100%;">
                        	<span t-if="o.partner_shipping_id == o.partner_invoice_id" t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
					Invoicing &amp; Shipping Address:</span>
                        	<span t-if="o.partner_shipping_id != o.partner_invoice_id" t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
					Invoicing Address:</span>
                 	    </div>
			    <div class="pull-left" style="width:100%;">
                               <div t-if="o.partner_id" t-attf-style="color:{{o.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;font-size:{{o.body_font+6}}px;"> 
				<span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
			       </div>
                               <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                        t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                                        <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>

			    </div>
                   </div>
		   <div class="col-xs-6 pull-right" style="text-align:right;">
				<t t-if="o.partner_shipping_id != o.partner_invoice_id">
				   <span t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">Shipping Address:</span>
			       	   <address t-field="o.partner_shipping_id" style="margin-bottom:0px;"
				    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"]}'/>
				</t>
		   </div>

                 </div> <!--end of wrapper2-->
		 <div class="col-xs-12 mt8 mb8" t-attf-style="padding-left:0px; padding-right:0px;">
                           <t t-set="div_style" t-value="'color:{};background-color:{};font-size:{};width:auto; display:inline-block; padding-left:15px; padding-right:15px;'.format(o.theme_txt_color, o.theme_color, o.body_font+2)"></t>
                           <div t-if="o.client_order_ref" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Client Reference:</strong>
                                <p t-field="o.client_order_ref"/>
                           </div>
                           <div t-if="o.date_order" t-attf-style="{{div_style}}">
                                <strong style="white-space:nowrap;" t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                                <strong style="white-space:nowrap;" t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                                <p t-field="o.date_order"/>
                           </div>
                           <!--<div t-if="o.state in ['draft','sent'] and o.validity_date" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Valid Until:</strong>
                                <p t-field="o.validity_date"/>
                           </div>-->
                           <div t-if="o.user_id.name" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Salesperson:</strong>
                                <p t-field="o.user_id.name"/>
                           </div>
                           <div t-if="o.fiscal_position" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Fiscal Position:</strong>
                                <p t-field="o.fiscal_position"/>
                           </div>
                           <div t-if="o.payment_term" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Payment Terms:</strong>
                                <p t-field="o.payment_term"/>
                           </div>
                           <div t-if="not o.payment_term and o.partner_id.property_payment_term" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Payment Terms:</strong>
                                <p t-field="o.partner_id.property_payment_term"/>
                           </div>


		 </div>
                <!-- DATA-->
                <t t-call="professional_templates.order_data"/>
                <!--/DATA-->

               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->
    </template>
</data>
</openerp>

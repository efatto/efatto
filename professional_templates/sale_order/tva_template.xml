<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="SO_4_document" name="TVA SO Template">
 <!-- Multicompany -->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div t-attf-style="padding-bottom:0px; padding-left:0px; padding-right:0px; color:{{o.text_color}} !important;font-size:{{o.header_font}}px !important;font-family:{{o.font_family}} !important;" class="header col-xs-12">
                       <div class="col-xs-5 pull-left" t-attf-style="padding:15px; border:1px solid {{o.text_color}};">
				<t t-call="professional_templates.company_address"/>
                       </div>
			<div class="col-xs-5 pull-right" t-attf-style="border: 1px solid {{o.text_color}}; color:{{o.text_color}};">
			     <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                             <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                             <span t-field="o.date_order"/>
			</div>
                       <div class="col-xs-7 pull-right" style="text-align:right; padding-left:0px; padding-right:0px;">
                         <div t-if="o.order_logo" style="width:100%; text-align:right; padding-bottom:3px; padding-top:3px;">
			    <span itemprop="image" t-field="o.order_logo" t-field-options='{"widget": "image", "style": "max-height:120px; display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.order_logo and company.invoice_logo" style="width:100%; text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.invoice_logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.order_logo and not company.invoice_logo and company.logo" style="width:100%; text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
			 <div t-if="not o.order_logo and not company.logo and not company.invoice_logo" style="width:100%;text-align:right;padding-bottom:8px;padding-top:3px;">
			    <span itemprop="image" t-field="company.logo" t-field-options='{"widget": "image", "style": "display: inline-block;"}'/>
			 </div>
                         <div t-if="company.twitter or company.facebook or company.googleplus" t-attf-style="background-color:{{o.theme_color}}; width:auto; float:right; padding-left:15px; color:{{o.theme_txt_color}}; 
                                   padding-right:15px; padding-top:2px; padding-bottom:2px;" class="pull-right">
                                <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square fa-lg"/>&#160;<span t-field="company.twitter"/>
                                <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square fa-lg"/>&#160;<span t-field="company.facebook"/>
                                <span t-if="company.googleplus" style="padding-left:13px;" class="fa fa-google-plus-square fa-lg"/>&#160;<span t-field="company.googleplus" />
                         </div>

                       </div> 
                </div> <!--end of Header-->
		<!-- START OF PAGE -->
               <div class="page" t-attf-style="color:{{o.text_color}} !important;font-size:{{o.body_font}}px !important;font-family:{{o.font_family}} !important;">
                     	<div class="col-xs-5 pull-left" t-attf-style="color:{{o.text_color}} !important; border:1px solid {{o.text_color}}">
                             <h3 id="title" style="margin-top:10px;">
		                <span t-if="o.state not in ['draft','sent']">Order  </span>
                		<span t-if="o.state in ['draft','sent']">Quotation  </span>
               			<span t-field="o.name"/>

                            </h3>
	                </div>
			<!--<div class="col-xs-6 pull-left" style="height:80px; text-align:center; border:1px solid; border-top:0px;">
                                <span style="font-weight:bold; font-size:60px; color:#f9f9f9;">Stamp</span>
                        </div> -->
	                <div class="col-xs-6 pull-right" style="border:1px solid;padding:15px;">
                             <div class="pull-left" style="padding-top:5px; padding-bottom:0px; width:100%;">
                                <span t-if="o.partner_shipping_id == o.partner_invoice_id" t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
                                <span class="fa fa-file-text"/> Invoicing &amp; <span class="fa fa-truck"/> Shipping Address:</span>
                                <span t-if="o.partner_shipping_id != o.partner_invoice_id" t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
                                <span class="fa fa-file-text"/> Invoicing Address:</span>
                            </div>
                            <div class="pull-left" style="widht:100%;">
                                <div t-if="o.partner_id" t-attf-style="color:{{o.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;font-size:{{o.body_font+6}}px;">
                                   <span t-if="o.partner_id.title" t-field="o.partner_id.title"/> <span t-field="o.partner_id"/>
                               </div>
                               <address t-field="o.partner_id" style="margin-bottom:0px;" 
                                        t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"]}'/>
                                        <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                             </div>
        	        </div>
		  	<div t-if="o.partner_shipping_id != o.partner_invoice_id" class="col-xs-6 pull-left" style="padding:4px"/>
                   	<div t-if="o.partner_shipping_id != o.partner_invoice_id" class="col-xs-5 pull-left" 
			     t-attf-style="border:1px solid {{o.text_color}};padding:15px;">
                                <span t-if="o.partner_shipping_id" t-attf-style="font-size:{{o.body_font+6}}px; font-weight:bold;">
                                <span class="fa fa-truck"/> Shipping Address:</span>

                            <div t-if="o.partner_shipping_id" t-attf-style="color:{{o.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;font-size:{{o.body_font+6}}px;"> 
				<span t-if="o.partner_shipping_id.title" t-field="o.partner_shipping_id.title"/> <span t-field="o.partner_shipping_id"/>
			    </div>
                            <address t-field="o.partner_shipping_id" style="margin-bottom:0px;" 
                               t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax", "email", "website"], "no_marker": false}'/>                                       <span t-if="o.partner_shipping_id.vat">TIN: <span t-field="o.partner_shipping_id.vat"/></span>

                  	</div>
		
		<div class="col-xs-12 pull-right" style="padding:4px;"/>
                 <div class="col-xs-12 text-center" style="padding-top:8px; border:1px solid"><!--start of wrappe-->
                           <t t-set="div_style" t-value="'width:auto; float:left; padding-left:4px; padding-right:4px;font-size:{}'.format(o.body_font+2)"></t>
                           <div t-if="o.client_order_ref" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Client Reference:</strong>
                                <p t-field="o.client_order_ref"/>
                           </div>
                           <!--<div t-if="o.date_order" t-attf-style="{{div_style}}">
                                <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                                <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                                <p t-field="o.date_order"/>
                           </div>-->
                           <!--<div t-if="o.state in ['draft','sent'] and o.validity_date" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Valid Until:</strong>
                                <p t-field="o.validity_date"/>
                           </div>-->
                           <div t-if="o.user_id.name" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Salesperson:</strong>
                                <p t-field="o.user_id.name"/>
                           </div>
                           <div t-if="o.fiscal_position" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Fiscal Position:</strong>
                                <p t-field="o.fiscal_position"/>
                           </div>
                           <div t-if="o.payment_term" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Payment Terms:</strong>
                                <p t-field="o.payment_term"/>
                           </div>
                           <div t-if="not o.payment_term and o.partner_id.property_payment_term" t-attf-style="{{div_style}}">
                                 <strong style="white-space:nowrap;">Payment Terms:</strong>
                                <p t-field="o.partner_id.property_payment_term"/>
                           </div>


                 </div> <!--end of wrapper2-->
		<div class="col-xs-12 pull-right" style="padding:8px;"/>
                <!-- DATA-->
                <t t-call="professional_templates.order_data"/>
                <!--/DATA-->

               </div><!--End of PAGE-->
                <!--FOOTER -->
               <div class="footer" t-attf-style="font-size:{{o.footer_font}}px !important;font-family:{{o.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
	       </div>
                <!--/FOOTER-->

    </template>
</data>
</openerp>

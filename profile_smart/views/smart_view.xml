<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
 
        <record id="hr_timesheet_line_tree_smart" model="ir.ui.view">
            <field name="name">hr.analytic.timesheet.tree.smart</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <field name="account_id" position="replace">
                    <field domain="[('type','in',['normal','contract']),('use_timesheets','=',1)]" name="account_id" context="{'default_use_timesheets': 1}" options="{'no_open': True, 'no_create': True}"/>
                </field>
            </field>
        </record>

      <record id="hr_timesheet_line_form" model="ir.ui.view">
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
            <field name="name">hr.analytic.timesheet.form.smart</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="arch" type="xml">
                <field name="account_id" position="replace">
                    <field domain="[('type','in',['normal','contract']),('state', '&lt;&gt;', 'close'),('parent_id','!=',False)]" name="account_id" select="1" options="{'no_open': True, 'no_create': True}"/>
                </field>
            </field>
        </record>
        
 <!-- invoice smart -->   
        <record id="invoice_form_smart" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="fiscal_position" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="journal_id" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="account_id" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="payment_term" position="replace">
                </field>
                <field name="date_invoice" position="after">
                    <field name="payment_term" class="oe_inline" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
                <page string="Other Info" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </page>
                <page string="Payments" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </page>
            </field>
        </record>
 
 <!-- supplier invoice smart -->   
        <record id="supplier_invoice_form_smart" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="fiscal_position" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="journal_id" position="replace">
                </field>
                <xpath expr="//sheet[@string='Supplier Invoice']/div[@class='oe_title']" position="before">
                    <group>
                        <field name="journal_id" string="Expense Type:"/>
                    </group>
                </xpath>
                <field name="account_id" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </field>
                <field name="payment_term" position="replace">
                </field>
                <field name="date_invoice" position="after">
                    <field name="payment_term" class="oe_inline" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
                <page string="Other Info" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </page>
                <page string="Payments" position="attributes">
                    <attribute name="groups">base.group_account_user,profile_smart.group_hidden</attribute>
                </page>
                <field name="reference_type" position="replace">
                </field>
                <field name="reference" position="replace">
                </field>
            </field>
        </record>
        

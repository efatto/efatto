<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <!--report auto="False" id="task_work_report" model="project.task" name="task.work.report" rml="project_extenssion/report/task_work_report.rml" string="Trabalhos Efetuados"/-->

      <record model="ir.ui.view" id="view_task_form2_inherit">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="type">form</field>
        <field name="arch" type="xml">
          <field name="stage_id" position="before">
            <field name="work_started" invisible="1" />
            <button name="do_start_work" attrs="{'invisible':[('work_started','=', True)]}" string="Start Work" type="object" groups="base.group_user"/>
            <button name="do_close_work" class="oe_highlight" attrs="{'invisible':[('work_started','!=', True)]}" string="Stop Work" type="object" groups="base.group_user"/>
            <button name="action_report_send" string="Notify Partner" type="object" groups="base.group_user"/>
          </field>
      		<xpath expr="/form/sheet/notebook/page[@string='Description']" position="after">
            <page string="Done">
              <field name="done" placeholder="Add finished works ..."/>
            </page>
          </xpath>
        </field>
      </record>

  		<record model="ir.ui.view" id="view_task_search_form_inherit">
        <field name="name">project.task.formproject.task.search.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
    		<field name="type">search</field>
        <field name="arch" type="xml">
      		<xpath expr="/search/filter[@name='draft']" position="after">
        		<filter string="Started" name="trabalho_aberto" help="State Started" />
          </xpath>
        </field>
      </record>

		<record model="ir.ui.view" id="view_task_kanban_inherit_1">
      <field name="name">view_task_kanban_inherit_1</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_kanban" />
      <field name="type">kanban</field>
      <field name="arch" type="xml">
        <xpath expr="/kanban/templates/t/div/div[2]/div[@class='oe_kanban_bottom_right']/div" position="before">
          <div class="pull-left" groups="base.group_user">
            <field name="work_started" invisible="1"/>
            <a name="do_start_work" type="object" style="color:green">
              <i class="fa fa-lg fa-play" attrs="{'invisible':[('work_started','=', True)]}"></i><span style="color:white"></span></a>
            <a name="do_close_work" type="object" style="color:red">
              <i class="fa fa-lg fa-stop" attrs="{'invisible':[('work_started','!=', True)]}"></i><span style="color:white">.</span></a>
          </div>
        </xpath>
      </field>
    </record>

  </data>
</openerp>

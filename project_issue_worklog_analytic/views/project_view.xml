<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_issue_form_view_analytic">
            <field name="name">Project Issue Tracker Form Analytic</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue_sheet.project_issue_form_view" />
            <field name="arch" type="xml">
                <field name="analytic_account_id" position="after">
                    <field name="analytic_ids" widget="many2many_tags"/>
                </field>
                <field name="account_id" position="attributes">
                    <attribute name="domain">[
                        ('id', 'in', parent.analytic_ids[0][2])]</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
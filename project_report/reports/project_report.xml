<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_project_overview">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h2>Progetto <span t-field="o.name"/></h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">
                                    <strong>Responsabile:</strong>
                                    <span t-field="o.user_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <t t-if="o.partner_id.name">
                                    <div class="col-xs-3">
                                        <strong>Cliente:</strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                </t>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">
                                    <strong>Data Inizio:</strong>
                                    <span t-field="o.date_start"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">
                                    <strong>Data Fine:</strong>
                                    <span t-field="o.date"/>
                                </div>
                            </div>

                            <!--Overview of Open Tasks-->
                            <div class="row">
                                <div class="col-xs-12">
                                    <h3>Attività Aperte</h3>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Attività</th>
                                    <th>Assegnate a</th>
                                    <th>Stato</th>
                                </tr>
                                <t t-foreach="o.task_ids.sorted(key=lambda a: (a.stage_id.sequence, a.user_id.name))" t-as="f">
                                    <tr>
                                        <td>
                                            <span t-field="f.name"/>
                                        </td>
                                        <td>
                                            <span t-field="f.user_id"/>
                                        </td>
                                        <td>
                                            <span t-field="f.stage_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>

                            <!-- Overview of Open Issues -->
                            <div class="row">
                                <div class="col-xs-12">
                                    <h3>Problematiche Aperte</h3>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Problematica</th>
                                    <th>Assegnata a</th>
                                    <th>Stato</th>
                                </tr>
                                <t t-foreach="o.issue_ids.sorted(key=lambda a: (a.stage_id.sequence, a.user_id.name))" t-as="f">
                                    <tr>
                                        <td>
                                            <span t-field="f.name"/>
                                        </td>
                                        <td>
                                            <span t-field="f.user_id"/>
                                        </td>
                                        <td>
                                            <span t-field="f.stage_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                       </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</openerp>

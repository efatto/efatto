<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project_view_inherit_progress" model="ir.ui.view">
            <field name="name">project.task.inherit.progress</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="progress" position="after">
                    <field name="progress_state" widget="progressbar"/>
                </field>
            </field>
        </record>

        <record id="view_task_gantt_inherit" model="ir.ui.view">
            <field name="name">project.task.gantt</field>
            <field name="model">project.task</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <gantt date_start="date_start" date_stop="date_end" progress="progress_state" string="Tasks" default_group_by="project_id">
                </gantt>
            </field>
        </record>

    </data>
</openerp>

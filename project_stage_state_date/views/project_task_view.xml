<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="project_task_view_task_form_date">
            <field name="name">project_task_view_task_form_filter_date</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='date_deadline']" position="before">
                    <field name="date_start"/>
                    <field name="date_end"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_date_tree_view">
            <field name="name">project_task_date_tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">red:date_end and (date_end&lt;current_date and state not in ['done','cancelled']);orange:date_start and (date_start&lt;current_date and state in ['draft','pending'])</attribute>
                </xpath>
                <field name="date_deadline" position="after">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_task_kanban_date">
            <field name="name">project_task_kanban_date</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <field name='date_deadline' position="after">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </field>
                <xpath expr="/kanban/templates/t/div/div[@class='oe_kanban_content']/div[@class='text-muted']/field[@name='project_id']" position="after">
                    <t t-if="record.state and record.state.raw_value != 'open'">
                    <t t-if="record.state and record.state.raw_value != 'done'">
                    <t t-if="record.state and record.state.raw_value != 'cancelled'">
                    <t t-if="record.date_start.raw_value and record.date_start.raw_value lt (new Date())" t-set="yellow">oe_kanban_text_yellow</t></t></t></t>
                        <br/><span t-attf-class="#{yellow || ''}"><i><field name="date_start"/></i></span>
                    <t t-if="record.state and record.state.raw_value != 'done'">
                    <t t-if="record.state and record.state.raw_value != 'cancelled'">
                    <t t-if="record.date_end.raw_value and record.date_end.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t></t></t>
                        <br/><span t-attf-class="#{red || ''}"><i><field name="date_end"/></i></span>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
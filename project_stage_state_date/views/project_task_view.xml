<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="project_task_view_task_form_date">
            <field name="name">project_task_view_task_form_filter_date</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='date_deadline']" position="before">
                    <field name="date_start"/>
                    <field name="date_end"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@string='Extra Info']/group/group[@string='Gantt View']" position="replace">
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_date_tree_view">
            <field name="name">project_task_date_tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">red:date_end and (date_end&lt;current_date and state not in ['done','cancelled']);purple:date_start and (date_start&lt;current_date and state=='open');green:state=='done'</attribute>
                </xpath>
                <field name="date_end" position="after">
                    <field name="date_deadline"/>
                    <field name="state"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
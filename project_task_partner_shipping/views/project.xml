<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_task_calendar_date_crm" model="ir.ui.view">
        <field name="name">project.task.calendar.date.crm</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_calendar"/>
        <field name="arch" type="xml">
            <calendar position="replace">
                <calendar color="project_id" date_start="date_start"
                          date_stop="date_end" string="Tasks"
                          mode="week"
                          display="[name] c/o [partner_shipping_id] - [user_id] - [project_id]"
                >
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="partner_shipping_id"/>
                </calendar>
            </calendar>
        </field>
    </record>

    <record id="view_task_form2_crm" model="ir.ui.view">
        <field name="name">project.task.form.crm</field>
        <field name="model">project.task</field>
        <field eval="2" name="priority"/>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_shipping_id"/>
            </field>
        </field>
    </record>

  </data>
</openerp>

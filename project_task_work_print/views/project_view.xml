                <notebook position="after">
                    <group colspan="8" col="8" groups="base.group_hr_user,base.group_hr_manager">
                        <group colspan="2" col="1">
                            <label for="worker_signature" class="oe_edit_only"/>
                            <h2><field name="worker_signature" widget="signature" width="400" height="100"/></h2>
                        </group>
                        <group colspan="2" col="1">
                            <label for="recipient_signature" class="oe_edit_only"/>
                            <h2><field name="recipient_signature" widget="signature" width="400" height="100"/></h2>
                        </group>
                    </group>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
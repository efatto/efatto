<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="hr_timesheet_line_tree_follower" model="ir.ui.view">
            <field name="name">hr.analytic.timesheet.tree.follower</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='account_id']" position="attributes">
                    <attribute name="domain">[('message_is_follower','=',True)]</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='user_id']" position="attributes">
                    <attribute name="domain">[('id','in',[uid])]</attribute>
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            </field>
        </record>

  </data>
</openerp>

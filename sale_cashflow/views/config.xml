<?xml version="1.0" ?>
<openerp>
	<data>
    
	<record id="view_cashflow_company_form" model="ir.ui.view">
        <field name="name">view_cashflow_company</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
        
            <xpath expr="//page[@string='Configuration']/group" position="after">
					<group string="Cash flow account id for temporary moves">
						<field name="cashflow_account_id"/>
					</group>
           	</xpath>
           	
        </field>
    </record>
	
  </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="sale_form_update_discount" model="ir.ui.view">
        <field name="name">sale.order.form.discount.update</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <label for="discount"/>
                <group col="2" colspan="1">
                    <field name="discount" attrs="{'readonly':[('state','not in',['draft',])]}" nolabel="1"/>
                    <button string="Update discount" name="sale_discount_update" type="object" icon="gtk-ok" attrs="{'invisible':[('state','not in',['draft',])]}"/>
                </group>
            </field>
        </field>
    </record>

</data>
</openerp>

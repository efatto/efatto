<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="production_location_id" position="after">
                <field name="additional_state" readonly="1" />
                <field name="is_blocked" />
                <field name="blocked_note" />
                <field name="check_to_done" invisible="1" />
            </field>
            <xpath expr="//button[@name='button_mark_done'][1]" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': ['|', '|', ('post_visible', '=', True), ('check_to_done', '=', False), ('consumed_less_than_planned', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_mark_done'][2]" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': ['|', '|', ('post_visible', '=', True), ('check_to_done', '=', False), ('consumed_less_than_planned', '=', False)]}</attribute>
            </xpath>
            <button name="button_scrap" position="after">
                <button
          name="%(sale_order_calendar_state.action_marked_blocked)d"
          type="action"
          string="Mark blocked"
          attrs="{'invisible': [('is_blocked', '=', True)]}"
        />
                <button
          name="button_mark_not_blocked"
          type="object"
          string="Mark not blocked"
          attrs="{'invisible': [('is_blocked', '!=', True)]}"
        />
                <button
          name="button_mark_to_produce"
          type="object"
          string="Mark to produce"
          attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('additional_state', '=', 'to_produce')]}"
        />
                <button
          name="button_mark_to_assembly"
          type="object"
          string="Mark to assembly"
          attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('additional_state', '=', 'to_assembly')]}"
        />
                <button
          name="button_mark_to_submanufacture"
          type="object"
          string="Mark to submanufacture"
          attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('additional_state', '=', 'to_submanufacture')]}"
        />
                <button
          name="button_mark_to_test"
          type="object"
          string="Mark to test"
          attrs="{'invisible': ['|', '|', ('state', '!=', 'progress'), ('additional_state', '=', False), ('additional_state', 'in', ['to_produce', 'to_test'])]}"
        />
                <button
          name="button_unmark_additional_state"
          type="object"
          string="Unmark state"
          attrs="{'invisible': [('additional_state', '=', False)]}"
        />
            </button>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="0">

        <record id="sale_order_mobile_variant_form" model="ir.ui.view">
            <field name="name">sale.order.form.count</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Sale Order Mobile">
                    <header>
                        <button name="invoice_recreate" states="invoice_except" string="Recreate Invoice" groups="base.group_user"/>
                        <button name="invoice_corrected" states="invoice_except" string="Ignore Exception" groups="base.group_user"/>
                        <button name="action_quotation_send" icon="terp-mail-message-new" help="Send by Email" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_quotation_send" icon="terp-mail-message-new" help="Send by Email" type="object" states="sent,progress,manual" groups="base.group_user"/>
                        <button name="print_quotation" icon="STOCK_PRINT" help="Print" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
                        <button name="print_quotation" icon="STOCK_PRINT" help="Print" type="object" states="sent,progress,manual" groups="base.group_user"/>
                        <button name="action_button_confirm" icon="STOCK_APPLY" states="draft" help="Confirm Sale" type="object" groups="base.group_user"/>
                        <button name="action_button_confirm" icon="STOCK_APPLY" states="sent" help="Confirm Sale" class="oe_highlight" type="object" groups="base.group_user"/>
                        <!--<button name="action_view_invoice" string="View Invoice" type="object" class="oe_highlight"-->
                            <!--attrs="{'invisible': [('invoice_exists', '=', False)]}" groups="base.group_user"/>-->
                        <!--<button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"-->
                            <!--type="action" states="manual" class="oe_highlight" groups="base.group_user"/>-->
                        <button name="copy_quotation" icon="STOCK_COPY" states="cancel" help="New Copy of Quotation" type="object"/>
                        <button name="cancel" icon="gtk-undo" states="draft,sent" help="Cancel Quotation" groups="base.group_user"/>
                        <button name="action_cancel" icon="STOCK_CANCEL" states="manual,progress" help="Cancel Order" type="object" groups="base.group_user"/>
                        <button name="invoice_cancel" icon="STOCK_CANCEL" states="invoice_except" help="Cancel Order" groups="base.group_user"/>
                        <field name="state" invisible="1"/>
                        <!--widget="statusbar" statusbar_visible="draft,sent,progress,done" statusbar_colors='{"invoice_except":"red","waiting_date":"blue"}'/>-->
                </header>
                <sheet>

                    <field name="scan" nolabel="1" placeholder="Scan QR Code" tabindex="-1"/>
                    <group>
                        <field name="is_same_color_stitching" attrs="{'readonly': [('is_white_stitching', '=', True)]}"/>
                        <field name="is_white_stitching" attrs="{'readonly': [('is_same_color_stitching', '=', True)]}"/>
                    </group>

                    <group colspan="2" col="2">
                        <group>
                            <field name="product_template_image" widget="image" readonly="1" nolabel="1" placeholder="Template Image"/>
                        </group>
                        <group>
                            <field name="product_attribute_image" widget="image" readonly="1" nolabel="1" placeholder="Attribute Image"/>
                        </group>
                    </group>

                    <field name="product_template_id"  invisible="1"/>
                    <field name="product_attribute_line_id" invisible="1"/>
                    <field name="product_attribute_child_id" invisible="1"/>
                    <field name="product_attribute_value_id" invisible="1"/>
                    <field name="product_attribute_child_ids" invisible="1"/>
                    <field name="product_attribute_value_ids" invisible="1"/>
                    <field name="stitching_value_ids" invisible="1"/>
                    <field name="stitching_value_id" invisible="1"/>
                    <field name="product" nolabel="1" placeholder="Product"/>
                    <group>
                        <group colspan="2" col="2">
                            <field name="product_qty" nolabel="1"/>
                            <field name="price_unit" nolabel="1" readonly="1"/>
                        </group>
                    </group>
                    <button name="add_product_to_order" type="object" states="draft" string="Add product in order" groups="base.group_user"/>

                    <group>
                        <field name="partner_id" nolabel="1" placeholder="Partner" on_change="onchange_partner_id(partner_id, context)" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'/>
                    </group>

                    <!--<button name="barcode" style="height:56px;border-width:0px;" url="zxing://scan/?ret=http://foo.com/products/{CODE}/description&amp;SCAN_FORMATS=UPC_A,EAN_13">-->
                    <!--</button>-->

                    <field name="order_line">
                        <tree string="Sales Order Lines" editable="bottom">
                            <field name="state" invisible="1"/>
                            <field name="th_weight" invisible="1"/>
                            <field name="product_id"
                                context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                groups="base.group_user"
                                on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, False, product_uos_qty, False, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>
                            <field name="name"/>
                            <field name="product_uom_qty" string="Pz"
                                context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                            <field name="product_uom" invisible="1"
                                context="{'company_id': parent.company_id}"
                                on_change="onchange_product_uom(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, parent.fiscal_position, context)"
                                groups="product.group_uom" options='{"no_open": True}'/>
                            <field name="product_uos_qty" groups="product.group_uos" invisible="1"/>
                            <field name="product_uos" string="UoS" groups="product.group_uos" invisible="1"/>
                            <field name="price_unit"/>
                            <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]" invisible="1"/>
                            <field name="discount" groups="sale.group_discount_per_so_line" invisible="1"/>
                            <field name="price_subtotal" invisible="1"/>
                        </tree>
                    </field>

                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount_total" />
                                <button name="button_dummy"
                                    states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                        <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                    <group colspan="2" col="1">
                        <field name="payment_term" options="{'no_open': True, 'no_create': True}" nolabel="1" placeholder="Payment term"/>
                    </group>
                    <group colspan="2" col="2">
                        <group>
                            <label string="Quotation " attrs="{'invisible': [('state','not in',('draft','sent'))]}"/>
                            <label string="Sales Order " attrs="{'invisible': [('state','in',('draft','sent'))]}"/>
                            <field name="name" class="oe_inline" readonly="1" nolabel="1"/>
                        </group>
                        <group>
                            <field name="date_order" nolabel="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="fiscal_position" options="{'no_open': True, 'no_create': True}" attrs="{'required': True}"
                            on_change="onchange_fiscal_position(fiscal_position, order_line, context)"/>
                        <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                        <field name="client_order_ref"/>
                        <field name="invoiced" invisible="1"/>
                        <field name="invoice_exists" invisible="1"/>
                        <field name="partner_invoice_id" groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice'}"/>
                        <field name="partner_shipping_id" on_change="onchange_delivery_id(company_id, partner_id, partner_shipping_id, fiscal_position)" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}"/>
                        <field name="project_id" context="{'partner_id':partner_invoice_id, 'manager_id': user_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}" groups="sale.group_analytic_accounting" domain="[('type','in',['view','normal','contract'])]"/>
                        <field domain="[('type','=','sale')]" name="pricelist_id" groups="product.group_sale_pricelist" on_change="onchange_pricelist_id(pricelist_id,order_line)"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="image_medium" widget="image" img_height="250" img_width="250"/>
                        <field name="image_medium1" widget="image" img_height="250" img_width="250"/>
                        <field name="image_medium2" widget="image" img_height="250" img_width="250"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>


    <record id="action_sale_order_mobile_variant" model="ir.actions.act_window">
      <field name="name">Sale Order Variant Mobile</field>
      <field name="res_model">sale.order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">form,tree</field>
      <field name="view_id" ref="sale_order_mobile_variant_form"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to prepare a new sale order.
        </p>
      </field>
    </record>

    <menuitem
      action="action_sale_order_mobile_variant"
      id="menu_sale_order_mobile_variant"
      parent="base.menu_sales" sequence="10"
      groups="base.group_sale_salesman,base.group_sale_manager"/>

  </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <template id="report.style_inh" inherit_id="report.style">
    <xpath expr="." position="inside">    
        <style type="text/css">
            .invoice_tbody td {
                border: 1px solid black !important;
            }
            .table_rs {
                border: 1px solid black !important;
                background-color: lightblue;
                width: 100%;
            }
            .table_rs td {
                border: 1px solid black !important;
                background-color: lightblue;
            }
            .table_rs th {
                border: 1px solid black !important;
                background-color: lightblue;
            }
            .p_grey {
                font-color: #808080;
                font-size: 10pt;
            }
            .invoice_tax th {
                border-bottom: 1px solid black !important;
                border-right: 0px white !important;
                border-left: 0px white !important;
                background-color: white;
            }
            .invoice_tax td {
                border-bottom: 1px solid black !important;
                background-color: white;
            }
            .invoice_tax {
                margin-bottom: 0px;
                margin-top: 0px;
                border-right: 1px solid black;
                border-left: 1px solid black;
            }
        </style>
    </xpath>
    </template>
    
        <template id="report.external_layout_header_rs" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-xs-3" >
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 105px;"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="sale_order_report_simplerp.external_layout_headers_rs">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale_order_report_simplerp.external_layout_header_rs')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>

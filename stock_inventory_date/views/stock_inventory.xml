<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        <record id="view_inventory_form_date" model="ir.ui.view">
            <field name="name">view.inventory.form.date</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="date_inventory"/>
                    <field name="no_consumable" attrs="{'invisible': [('date_inventory', '=', False)]}"/>
                    <field name="search_child_location"/>
                </field>
            </field>
        </record>
  </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_reserved" model="ir.ui.view">
        <field name="name">sale.order.form.reserved</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <button name="open_view_stock_reserved"
                        string="Stock Reserved" type="object"
                        class="oe_stat_button" icon="fa-area-chart" groups="base.group_user"
                        attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>

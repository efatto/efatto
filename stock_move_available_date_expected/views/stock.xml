<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_search_date_expected" model="ir.ui.view">
        <field name="name">stock.move.search</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <filter string="Date expected from today" name="date_expected_from_today" domain="[
                    ('date_expected', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_reserved_tree" model="ir.ui.view">
        <field name="name">view.stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'cancel'" decoration-danger="date_expected&lt;current_date and state not in ('done', 'cancel')" string="Reserved Moves" create="false" default_order="date_expected">
                <field name="product_id" invisible="1"/>
                <field name="date_expected" string="Date Expected" widget="date"/>
                <field name="reserved_move_info"/>
                <field name="qty_signed"/>
                <field name="qty_available_at_date_expected"/>
                <field name="qty_available" string="Qty Available Today"/>
                <field name="move_line_ids" widget="many2many_tags" string="Reservations"/>
                <field name="picking_code" invisible="1"/>
                <field name="move_line_qty_done" invisible="1"/>
                <button name="%(stock_quant_manual_assign.assign_manual_quants_action)d"
                    type="action" icon="fa-tags"
                    string="Manual Quants"
                    attrs="{'invisible':['|','|',('move_line_qty_done', '!=', False),('picking_code','=','incoming'),('state','in',('cancel','done'))]}"
                    />
                <field name="product_uom" invisible="1" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                <field name="picking_id"/>
                <field name="sale_line_id" invisible="1"/>
                <field name="sale_partner_id" invisible="1"/>
                <field name="purchase_line_id" invisible="1"/>
                <field name="production_id" invisible="1"/>
                <field name="raw_material_production_id" invisible="1"/>
                <field name="location_id" groups="stock.group_stock_multi_locations" invisible="1"/>
                <field name="location_dest_id" groups="stock.group_stock_multi_locations" invisible="1"/>
                <field name="state"/>
                <field name="create_date" groups="base.group_no_one" widget="date"/>
                <field name="date" string="Date" groups="base.group_no_one" widget="date"/>
            </tree>
        </field>
    </record>
</odoo>

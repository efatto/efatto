<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_product_template_form_inherited" model="ir.ui.view">
        <field name="name">product.form.purchase.delay.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='stock_property']" position="before">
                <group
          name="orderpoint_info"
          attrs="{'invisible':[('type','=','service')]}"
        >
                    <field name="orderpoint_generate_active" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>

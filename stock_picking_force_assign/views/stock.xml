<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[last()]" position="after">
                <button name="force_assign" type="object"
                    states="draft,waiting,confirmed"
                    string="Force assign"
                    help="This button force assign for stock move with manual completed quantity only"
                    groups="stock_picking_force_assign.group_allow_stock_picking_force_assign"/>
            </xpath>
        </field>
    </record>
</odoo>
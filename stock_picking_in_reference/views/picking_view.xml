<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_picking_tree_in_reference" model="ir.ui.view">
            <field name="name">stock.picking.tree.in.reference</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="in_reference"/>
                    <field name="in_date"/>
                </field>
            </field>
        </record>
        <record id="view_picking_internal_search_in_reference" model="ir.ui.view">
            <field name="name">stock.picking.search.ddt.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="in_reference"/>
                    <field name="in_date"/>
                    <newline/>
                </field>
            </field>
        </record>

        <record id="stock_view_picking_form_in_reference" model="ir.ui.view">
            <field name="name">stock.view.picking.form.in.reference</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="in_reference"/>
                    <field name="in_date" attrs="{'required':[ ('in_reference', '!=', False)]}"/>
                </field>
            </field>
        </record>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.invoice.link.stock.picking.form.fix.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_picking_invoice_link.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="invoice_ids" position="replace"/>
                <xpath expr="//field[@name='move_type']/../.." position="before">
                    <group string="Invoice Informations">
                        <field name="invoice_ids"
                           nolabel="1"
                           groups="account.group_account_invoice"
                           attrs="{'invisible': [('invoice_state', '=', 'none')]}"
                        />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

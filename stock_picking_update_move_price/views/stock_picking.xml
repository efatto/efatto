<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_show_details']" position="after">
                <field name="price_unit" groups="stock.group_stock_manager"/>
                <button name="%(action_update_stock_move_price)d"
                        string="Update stock move price"
                        type="action"
                        icon="fa-dollar"
                        groups="stock.group_stock_manager"
                        attrs="{'invisible': [('show_details_visible', '=', False)]}"
                        options='{"warn": true}'/>
            </xpath>
        </field>
    </record>

</odoo>

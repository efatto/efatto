 <openerp>
		<data>
				<template id="inherited_website_sale_website_seo" inherit_id="website_sale.products_item" >
					<xpath expr="//img" position="attributes">						 		 
				      	    <attribute name="t-att-alt">product.name</attribute>						      	
					</xpath>
				</template>
				<template id="inherit_website_sale_products_template" inherit_id="website_sale.products"  priority="100"  name="Website Category Description" active="True" customize_show="True" >
					<xpath expr="//div[@id='products_grid']" position="before">						 		 
				      	    <div class="col-md-9" id="products_category_grid">
				      	    	<t t-if="category and  category.category_description">
				      	    	<div class="col-md-3">
				      	    		<span t-field="category.image_medium" t-field-options='{"widget": "image", "class": "img-rounded" }'/>
								</div>
								<div class="col-md-6">
									<h3><b><t t-esc="category.name"/>:</b></h3><p><t t-esc="category.category_description"/></p>
								</div>
				      	   
				      	   	
    				      		</t>	
				      	    </div>						      	
					</xpath>
				</template>				
		</data>
</openerp>     

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 

         <record id="wk_inherited_product_template_website_seo" model="ir.ui.view">
            <field name="name">Website  SEO</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Sales']" position="after">
                    <page string="SEO">
                        <separator string="Meta-tags editing:"/>  
                        <div>  
                            <div>
                                <label for="website_meta_title" string="Meta Title"/>
                                <field name = "website_meta_title" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                            <div>
                                <label for="website_meta_description" string="Meta Description"/>
                                <field name = "website_meta_description" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                            <div>
                                <label for="website_meta_keywords" string="Meta Keywords( seperated by comma )"/>
                                <field name = "website_meta_keywords" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                        </div>  
                        <group>
                            <field name = "seo_auto_update" string="Auto Update meta-tags during Automatic Generation of Meta Tags"/>
                        </group>
                        <p class="oe_grey">
                            <strong>Warning</strong>:  If you un-check this option to “Enable Auto Update during Automatic Generation of SEO information”, then SEO Information for such product(s) will not be updated*
                        </p>                      
                    </page>
                </xpath>
            </field>
         </record>
     <record id="wk_inherited_product_public_category_form_view_website_seo" model="ir.ui.view">
       <field name="name">product.public.category.form.inherited.wk</field>
        <field name="model">product.public.category</field>
          <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                <notebook>
                        <page string="SEO">
                        <separator string="Meta-tags editing:"/>  
                        <div>  
                            <div>
                                <label for="website_meta_title" string="Meta Title"/>
                                <field name = "website_meta_title" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                            <div>
                                <label for="website_meta_description" string="Meta Description"/>
                                <field name = "website_meta_description" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                            <div>
                                <label for="website_meta_keywords" string="Meta Keywords( seperated by comma )"/>
                                <field name = "website_meta_keywords" attrs="{'readonly':[('seo_auto_update','=',True)]}"/> 
                            </div>
                        </div>  
                        <group>
                            <field name = "seo_auto_update" string="Auto Update meta-tags during Automatic Generation of Meta Tags"/>
                        </group>
                        <p class="oe_grey">
                            <strong>Warning</strong>:  If you un-check this option to “Enable Auto Update during Automatic Generation of SEO information”, then SEO Information for such Category  will not be updated*
                        </p>                      
                    </page>
                     <page string="Category Description">                       
                        <div>  
                            <div>
                                <label for="category_description" string="Description (About this category)"/>
                                <field name = "category_description" /> 
                            </div>
                        </div>
                    </page>
                </notebook>
                </xpath>
            </field>
         </record>

        <record model="ir.ui.view" id="website_seo_tree_view">
            <field name="name">Website SEO </field>
            <field name="model">website.seo</field>
            <field name="type">tree</field>
            <field name="arch"  type="xml">
                <tree>
                    <field name="model_name" string="Configuration for"/> 
                    <field name="website_meta_title" string="Meta Title"/>                    
                    <field name="website_meta_description" string="Meta Description"/> 
                </tree>
            </field>
        </record>

        <record id="website_seo_form_view" model="ir.ui.view">
            <field name="name">Website SEO </field>
            <field name="model">website.seo</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Seo " create="false" class="oe_form_configuration"> 
                    <header>
                    <button string="Generate Now" type="object" name="save_meta_info" class="oe_highlight"/>    
                    </header>
                    <sheet>   
                        <group>   
                            <field name = "model_name" class="oe_inline"/>
                        </group>
                        <separator string="Meta Tags"/> 
                        <group>                               
                        <label for="id" string="Meta Title"/>
                        <div name="website_meta_title_div">                   
                            <div class="oe_edit_only">
                                <label for="website_seo_meta_title_ids"/>
                                <field name="website_seo_meta_title_ids" class="oe_inline" widget = "many2many_tags" options="{'no_create_edit':True}" domain="[('model_name', '=',model_name)]"/>
                            </div>
                            <div>
                                <h4><field name="website_meta_title" class="oe_inline"/></h4>
                            </div>
                        </div>
                        <label for="id" string="Meta Description"/>
                        <div name="website_meta_description_div">                          
                            <div class="oe_edit_only">
                                <label for="website_seo_meta_description_ids"/>
                                <field name="website_seo_meta_description_ids" class="oe_inline" widget = "many2many_tags" options="{'no_create_edit':True}" domain="[('model_name', '=',model_name)]"/>
                            </div>
                            <div>
                                <h4><field name="website_meta_description" class="oe_inline" /></h4>
                            </div>
                        </div>
                        <label for="id" string="Meta Keywords"/>
                        <div name="website_meta_keyword_div">                          
                            <div class="oe_edit_only">
                                <label for="website_seo_meta_keyword_ids"/>
                                <field name="website_seo_meta_keyword_ids" class="oe_inline" widget = "many2many_tags" options="{'no_create_edit':True}" domain="[('model_name', '=',model_name)]"/>
                            </div>
                            <div>
                                <h4><field name="website_meta_keyword" class="oe_inline" /></h4>
                            </div>
                        </div>
                    </group>
                    <separator string="Meta Tags Settings"/> 
                    <group> 
                        <group>   
                            <field name = "multi_attribute_seperator" />
                            <field name = "multi_value_seperator" />
                        </group>                                       
                    </group>                           
                                       
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action__website_seo">
            <field name="name">Website  SEO</field>
            <field name="res_model">website.seo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website_seo_tree_view"/>
        </record>

        <menuitem id="menu_website_seo_root" 
        parent="base.menu_base_partner" sequence="13"  name="Website SEO " string="Website SEO " />
         <menuitem id="menu_website_seo_submenu" action="action__website_seo"
        parent="menu_website_seo_root" sequence="1"  name="Website SEO " string="Website " />


  </data>   
</openerp>


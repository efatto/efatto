<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="config_webkul_website_addons_form" model="ir.ui.view">
            <field name="name">Webkul Website Addons Setting</field>
            <field name="model">webkul.website.addons</field>
            <field name="arch" type="xml">
               <form string="Webkul Website Addons Settings" class="oe_form_configuration">
                    <header  class="col-md-12" style="position:fixed;z-index:10" >
                        
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                   
                    </header>
                    <div style="height:10px;">
                    </div>
 
                    <group string="Website SEO">
                        <label for="module_website_seo"/>
                        <div name="module_website_seo">
                            <div class="oe_inline">
                                <field name="module_website_seo"/>
                            </div>
                        </div>
                    </group>

                 </form> 
            </field>
        </record>

        <record id="action_webkul_website_addons" model="ir.actions.act_window">
            <field name="name">Webkul Website Addons Setting</field>
            <field name="res_model">webkul.website.addons</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

         <menuitem id="menu_webkul_website_addons" parent="base.menu_config" action="action_webkul_website_addons" name="Impostazioni SEO"/>

    </data>
</openerp>